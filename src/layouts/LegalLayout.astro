---
import BaseLayout from './BaseLayout.astro';

export interface Props {
  title: string;
  description: string;
  lang?: string;
  updated?: string;
}

const { title, description, lang = 'en', updated } = Astro.props;
---

<BaseLayout title={title} description={description} lang={lang}>
  <div class="max-w-4xl mx-auto py-16">
    <header class="text-center mb-12">
      <h1 class="text-3xl md:text-4xl font-bold mb-4 text-gray-900">{title}</h1>
      {updated && (
        <p class="text-sm text-gray-500">
          Last updated: {updated}
        </p>
      )}
    </header>

    <article class="prose prose-zinc md:prose-lg max-w-none mx-auto px-6 pb-24">
      <slot />
    </article>
  </div>
</BaseLayout>

<style>
  .prose {
    color: #374151;
    line-height: 1.75;
  }
  
  .prose h2 {
    color: #1f2937;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  .prose table {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
  }
  
  .prose th,
  .prose td {
    border: 1px solid #d1d5db;
    padding: 0.75rem;
    text-align: left;
  }
  
  .prose th {
    background-color: #f9fafb;
    font-weight: 600;
  }
  
  .prose blockquote {
    border-left: 4px solid #3b82f6;
    padding-left: 1rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: #6b7280;
  }
  
  .prose ul,
  .prose ol {
    margin: 1rem 0;
    padding-left: 1.5rem;
  }
  
  .prose li {
    margin: 0.5rem 0;
  }
  
  .prose strong {
    font-weight: 600;
    color: #1f2937;
  }
  
  .prose a {
    color: #3b82f6;
    text-decoration: underline;
  }
  
  .prose a:hover {
    color: #1d4ed8;
  }
</style>