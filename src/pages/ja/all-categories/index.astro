---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const title = "記事カテゴリー一覧";
const description = "大阪府の外国人向け生活情報カテゴリー一覧";
const lang = "ja";

// 大阪市で人気の記事ランキング
const popularArticles = [
  {
    title: "大阪の治安情報と安全な地域",
    category: "安全性",
    url: "/safety-article-1/"
  },
  {
    title: "関西国際空港からのアクセス",
    category: "アクセス",
    url: "/access-article-2/"
  },
  {
    title: "生活コスト：家賃・光熱費",
    category: "コスト",
    url: "/cost-article-1/"
  }
];
---

<BaseLayout {title} {description} {lang}>
  <div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-6xl mx-auto px-4">
      
      <!-- Page Header -->
      <div class="text-center mb-12">
        <h1 class="text-2xl font-bold text-gray-900 mb-2">大阪市の<span class="text-red-500">生活情報</span></h1>
        <p class="text-sm text-gray-600">外国人向けの生活情報をカテゴリー別にまとめました</p>
      </div>


      <!-- Main Content Layout -->
      <div class="lg:grid lg:grid-cols-4 lg:gap-8">
        
        <!-- Categories List (Main Content) -->
        <div class="lg:col-span-3 space-y-12">
        
        <!-- 地域情報 -->
        <section>
          <div class="flex items-center justify-between mb-6">
            <div class="flex items-center space-x-3">
              <span class="text-2xl">🗾</span>
              <h2 class="text-xl font-bold text-gray-900">地域情報</h2>
              <span class="text-sm text-gray-500 bg-gray-100 px-3 py-1 rounded">4件の記事</span>
            </div>
            <a href="/regional-info/" class="text-sm text-red-500 hover:text-red-600" style="font-weight: 700;">
              もっと見る <span class="ml-1">></span>
            </a>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <a href="/regional-info-article-1/" title="大阪の地域特性と外国人コミュニティ" class="block">
              <div class="bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md transition-shadow group h-full">
                <div class="aspect-[4/3]">
                  <img src={`${import.meta.env.BASE_URL}assets/images/prefectures/osaka.png`}
                       alt="大阪の地域特性と外国人コミュニティ"
                       class="block w-full h-full object-cover group-hover:opacity-90 transition-opacity"
                       loading="lazy" />
                </div>
                <div class="p-4">
                  <h4 class="text-sm md:text-base font-semibold text-gray-900 mb-2 leading-tight group-hover:text-blue-600 transition-colors line-clamp-2">
                    大阪の地域特性と外国人コミュニティ
                  </h4>
                  <div class="flex gap-2 mb-2">
                    <span class="inline-flex items-center px-2 py-0.5 text-xs font-medium bg-green-100 text-green-800 rounded-full">
                      地域情報
                    </span>
                  </div>
                  <p class="text-xs text-gray-600 leading-relaxed line-clamp-2">
                    大阪府の各エリアの特徴と外国人が住みやすい地域を詳しく紹介。
                  </p>
                </div>
              </div>
            </a>
            
            <a href="/regional-info-article-2/" title="外国人に人気のエリア比較" class="block">
              <div class="bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md transition-shadow group h-full">
                <div class="aspect-[4/3]">
                  <img src={`${import.meta.env.BASE_URL}assets/images/prefectures/osaka.png`}
                       alt="外国人に人気のエリア比較"
                       class="block w-full h-full object-cover group-hover:opacity-90 transition-opacity"
                       loading="lazy" />
                </div>
                <div class="p-4">
                  <h4 class="text-sm md:text-base font-semibold text-gray-900 mb-2 leading-tight group-hover:text-blue-600 transition-colors line-clamp-2">
                    外国人に人気のエリア比較
                  </h4>
                  <div class="flex gap-2 mb-2">
                    <span class="inline-flex items-center px-2 py-0.5 text-xs font-medium bg-green-100 text-green-800 rounded-full">
                      地域情報
                    </span>
                  </div>
