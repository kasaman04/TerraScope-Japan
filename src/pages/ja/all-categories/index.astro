                <div class="aspect-[4/3]">
                  <img src={`${import.meta.env.BASE_URL}assets/images/prefectures/osaka.png`}
                       alt="外国人コミュニティとイベント"
                       class="block w-full h-full object-cover group-hover:opacity-90 transition-opacity"
