---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const title = "記事カテゴリー一覧";
const description = "大阪府の外国人向け生活情報カテゴリー一覧";
const lang = "ja";

// 大阪市で人気の記事ランキング
const popularArticles = [
  {
    rank: 1,
    title: "大阪の治安情報と安全な地域",
    category: "安全性",
    categoryIcon: "🛡️",
    categoryColor: "red",
    views: 2145,
    description: "外国人にとって安全な居住エリアの詳細情報",
    url: "/safety-article-1/"
  },
  {
    rank: 2,
    title: "関西国際空港からのアクセス",
    category: "アクセス", 
    categoryIcon: "🚃",
    categoryColor: "purple",
    views: 1892,
    description: "空港から市内各エリアへの最適ルート",
    url: "/access-article-2/"
  },
  {
    rank: 3,
    title: "生活コスト：家賃・光熱費",
    category: "コスト",
    categoryIcon: "💰", 
    categoryColor: "orange",
    views: 1634,
    description: "大阪府の生活費を詳しく分析",
    url: "/cost-article-1/"
  }
];
---

<BaseLayout {title} {description} {lang}>
  <div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-6xl mx-auto px-4">
      
      <!-- Page Header -->
      <div class="text-center mb-12">
        <h1 class="text-2xl font-bold text-gray-900 mb-2">大阪市の<span class="text-red-500">生活情報</span></h1>
        <p class="text-sm text-gray-600">外国人向けの生活情報をカテゴリー別にまとめました</p>
      </div>


      <!-- Main Content Layout -->
      <div class="lg:grid lg:grid-cols-4 lg:gap-8">
        
        <!-- Categories List (Main Content) -->
        <div class="lg:col-span-3 space-y-12">
        
        <!-- 地域情報 -->
        <section>
          <div class="flex items-center justify-between mb-6">
            <div class="flex items-center space-x-3">
              <span class="text-2xl">🗾</span>
              <h2 class="text-xl font-bold text-gray-900">地域情報</h2>
              <span class="text-sm text-gray-500 bg-gray-100 px-3 py-1 rounded">4件の記事</span>
            </div>
            <a href="/regional-info/" class="text-sm text-red-500 hover:text-red-600" style="font-weight: 700;">
              もっと見る <span class="ml-1">></span>
            </a>
          </div>

          <div class="space-y-6">
            <a href="/regional-info-article-1/" title="大阪の地域特性と外国人コミュニティ" class="block">
              <div class="bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md transition-shadow group">
                <div class="flex h-28 sm:h-28 md:h-32">
                  <div class="w-24 sm:w-28 md:w-36 h-full flex-shrink-0">
                    <img src={`${import.meta.env.BASE_URL}assets/images/prefectures/osaka.png`}
                         alt="大阪の地域特性と外国人コミュニティ"
                         class="block w-full h-full object-cover object-left group-hover:opacity-90 transition-opacity"
                         loading="lazy" />
                  </div>
                  <div class="flex-1 p-2 sm:p-4 flex flex-col justify-center">
                    <h4 class="text-sm sm:text-base md:text-lg font-semibold text-gray-900 mb-2 leading-tight group-hover:text-blue-600 transition-colors line-clamp-2">
                      大阪の地域特性と外国人コミュニティ
                    </h4>
                    <div class="flex gap-2 mb-2">
                      <span class="inline-flex items-center px-2 sm:px-3 py-0.5 sm:py-1 text-xs font-medium bg-green-100 text-green-800 rounded-full">
                        地域情報
                      </span>
                    </div>
                    <p class="text-xs sm:text-sm text-gray-600 leading-relaxed line-clamp-2">
                      大阪府の各エリアの特徴と外国人が住みやすい地域を詳しく紹介。
                    </p>
                  </div>
                </div>
              </div>
            </a>
          </div>
        </section>

        <!-- アクセス -->
        <section>
          <div class="flex items-center justify-between mb-6">
            <div class="flex items-center space-x-3">
              <span class="text-2xl">🚃</span>
              <h2 class="text-xl font-bold text-gray-900">アクセス</h2>
              <span class="text-sm text-gray-500 bg-gray-100 px-3 py-1 rounded">4件の記事</span>
            </div>
            <a href="/access/" class="text-sm text-red-500 hover:text-red-600" style="font-weight: 700;">
              もっと見る <span class="ml-1">></span>
            </a>
          </div>

          <div class="space-y-6">
            <a href="/access-article-1/" title="大阪の交通システム完全ガイド" class="block">
              <div class="bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md transition-shadow group">
                <div class="flex h-28 sm:h-28 md:h-32">
                  <div class="w-24 sm:w-28 md:w-36 h-full flex-shrink-0">
                    <img src={`${import.meta.env.BASE_URL}assets/images/prefectures/osaka.png`}
                         alt="大阪の交通システム完全ガイド"
                         class="block w-full h-full object-cover object-left group-hover:opacity-90 transition-opacity"
                         loading="lazy" />
                  </div>
                  <div class="flex-1 p-2 sm:p-4 flex flex-col justify-center">
                    <h4 class="text-sm sm:text-base md:text-lg font-semibold text-gray-900 mb-2 leading-tight group-hover:text-blue-600 transition-colors line-clamp-2">
                      大阪の交通システム完全ガイド
                    </h4>
                    <div class="flex gap-2 mb-2">
                      <span class="inline-flex items-center px-2 sm:px-3 py-0.5 sm:py-1 text-xs font-medium bg-purple-100 text-purple-800 rounded-full">
                        アクセス
                      </span>
                    </div>
                    <p class="text-xs sm:text-sm text-gray-600 leading-relaxed line-clamp-2">
                      JR・私鉄・地下鉄の路線図と外国人向け利用ガイド。
                    </p>
                  </div>
                </div>
              </div>
            </a>
          </div>
        </section>

        <!-- 国際対応 -->
        <section>
          <div class="flex items-center justify-between mb-6">
            <div class="flex items-center space-x-3">
              <span class="text-2xl">🌏</span>
              <h2 class="text-xl font-bold text-gray-900">国際対応</h2>
              <span class="text-sm text-gray-500 bg-gray-100 px-3 py-1 rounded">4件の記事</span>
            </div>
            <a href="/international-support/" class="text-sm text-red-500 hover:text-red-600" style="font-weight: 700;">
              もっと見る <span class="ml-1">></span>
            </a>
          </div>

          <div class="space-y-6">
            <a href="/international-support-article-1/" title="外国語対応の医療機関リスト" class="block">
              <div class="bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md transition-shadow group">
                <div class="flex h-28 sm:h-28 md:h-32">
                  <div class="w-24 sm:w-28 md:w-36 h-full flex-shrink-0">
                    <img src={`${import.meta.env.BASE_URL}assets/images/prefectures/osaka.png`}
                         alt="外国語対応の医療機関リスト"
                         class="block w-full h-full object-cover object-left group-hover:opacity-90 transition-opacity"
                         loading="lazy" />
                  </div>
                  <div class="flex-1 p-2 sm:p-4 flex flex-col justify-center">
                    <h4 class="text-sm sm:text-base md:text-lg font-semibold text-gray-900 mb-2 leading-tight group-hover:text-blue-600 transition-colors line-clamp-2">
                      外国語対応の医療機関リスト
                    </h4>
                    <div class="flex gap-2 mb-2">
                      <span class="inline-flex items-center px-2 sm:px-3 py-0.5 sm:py-1 text-xs font-medium bg-blue-100 text-blue-800 rounded-full">
                        国際対応
                      </span>
                    </div>
                    <p class="text-xs sm:text-sm text-gray-600 leading-relaxed line-clamp-2">
                      英語・中国語・韓国語対応可能な病院・クリニックの詳細情報。
                    </p>
                  </div>
                </div>
              </div>
            </a>
          </div>
        </section>

        <!-- 子育て・教育 -->
        <section>
          <div class="flex items-center justify-between mb-6">
            <div class="flex items-center space-x-3">
              <span class="text-2xl">👨‍👩‍👧‍👦</span>
              <h2 class="text-xl font-bold text-gray-900">子育て・教育</h2>
              <span class="text-sm text-gray-500 bg-gray-100 px-3 py-1 rounded">4件の記事</span>
            </div>
            <a href="/childcare-education/" class="text-sm text-red-500 hover:text-red-600" style="font-weight: 700;">
              もっと見る <span class="ml-1">></span>
            </a>
          </div>

          <div class="space-y-6">
            <a href="/childcare-education-article-1/" title="大阪のインターナショナルスクール" class="block">
              <div class="bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md transition-shadow group">
                <div class="flex h-28 sm:h-28 md:h-32">
                  <div class="w-24 sm:w-28 md:w-36 h-full flex-shrink-0">
                    <img src={`${import.meta.env.BASE_URL}assets/images/prefectures/osaka.png`}
                         alt="大阪のインターナショナルスクール"
                         class="block w-full h-full object-cover object-left group-hover:opacity-90 transition-opacity"
                         loading="lazy" />
                  </div>
                  <div class="flex-1 p-2 sm:p-4 flex flex-col justify-center">
                    <h4 class="text-sm sm:text-base md:text-lg font-semibold text-gray-900 mb-2 leading-tight group-hover:text-blue-600 transition-colors line-clamp-2">
                      大阪のインターナショナルスクール
                    </h4>
                    <div class="flex gap-2 mb-2">
                      <span class="inline-flex items-center px-2 sm:px-3 py-0.5 sm:py-1 text-xs font-medium bg-indigo-100 text-indigo-800 rounded-full">
                        子育て・教育
                      </span>
                    </div>
                    <p class="text-xs sm:text-sm text-gray-600 leading-relaxed line-clamp-2">
                      大阪府内のインターナショナルスクールの比較と入学ガイド。
                    </p>
                  </div>
                </div>
              </div>
            </a>
          </div>
        </section>

        <!-- 生活利便性 -->
        <section>
          <div class="flex items-center justify-between mb-6">
            <div class="flex items-center space-x-3">
              <span class="text-2xl">🏪</span>
              <h2 class="text-xl font-bold text-gray-900">生活利便性</h2>
              <span class="text-sm text-gray-500 bg-gray-100 px-3 py-1 rounded">4件の記事</span>
            </div>
            <a href="/living-convenience/" class="text-sm text-red-500 hover:text-red-600" style="font-weight: 700;">
              もっと見る <span class="ml-1">></span>
            </a>
          </div>

          <div class="space-y-6">
            <a href="/living-convenience-article-1/" title="買い物施設とスーパーマーケット" class="block">
              <div class="bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md transition-shadow group">
                <div class="flex h-28 sm:h-28 md:h-32">
                  <div class="w-24 sm:w-28 md:w-36 h-full flex-shrink-0">
                    <img src={`${import.meta.env.BASE_URL}assets/images/prefectures/osaka.png`}
                         alt="買い物施設とスーパーマーケット"
                         class="block w-full h-full object-cover object-left group-hover:opacity-90 transition-opacity"
                         loading="lazy" />
                  </div>
                  <div class="flex-1 p-2 sm:p-4 flex flex-col justify-center">
                    <h4 class="text-sm sm:text-base md:text-lg font-semibold text-gray-900 mb-2 leading-tight group-hover:text-blue-600 transition-colors line-clamp-2">
                      買い物施設とスーパーマーケット
                    </h4>
                    <div class="flex gap-2 mb-2">
                      <span class="inline-flex items-center px-2 sm:px-3 py-0.5 sm:py-1 text-xs font-medium bg-yellow-100 text-yellow-800 rounded-full">
                        生活利便性
                      </span>
                    </div>
                    <p class="text-xs sm:text-sm text-gray-600 leading-relaxed line-clamp-2">
                      外国人向けの食材が手に入るスーパーや輸入食品店の情報。
                    </p>
                  </div>
                </div>
              </div>
            </a>
          </div>
        </section>

        <!-- コスト -->
        <section>
          <div class="flex items-center justify-between mb-6">
            <div class="flex items-center space-x-3">
              <span class="text-2xl">💰</span>
              <h2 class="text-xl font-bold text-gray-900">コスト</h2>
              <span class="text-sm text-gray-500 bg-gray-100 px-3 py-1 rounded">4件の記事</span>
            </div>
            <a href="/cost-japan-style/" class="text-sm text-red-500 hover:text-red-600" style="font-weight: 700;">
              もっと見る <span class="ml-1">></span>
            </a>
          </div>

          <div class="space-y-6">
            <a href="/cost-article-1/" title="生活コスト：家賃・光熱費" class="block">
              <div class="bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md transition-shadow group">
                <div class="flex h-28 sm:h-28 md:h-32">
                  <div class="w-24 sm:w-28 md:w-36 h-full flex-shrink-0">
                    <img src={`${import.meta.env.BASE_URL}assets/images/prefectures/osaka.png`}
                         alt="生活コスト：家賃・光熱費"
                         class="block w-full h-full object-cover object-left group-hover:opacity-90 transition-opacity"
                         loading="lazy" />
                  </div>
                  <div class="flex-1 p-2 sm:p-4 flex flex-col justify-center">
                    <h4 class="text-sm sm:text-base md:text-lg font-semibold text-gray-900 mb-2 leading-tight group-hover:text-blue-600 transition-colors line-clamp-2">
                      生活コスト：家賃・光熱費
                    </h4>
                    <div class="flex gap-2 mb-2">
                      <span class="inline-flex items-center px-2 sm:px-3 py-0.5 sm:py-1 text-xs font-medium bg-orange-100 text-orange-800 rounded-full">
                        コスト
                      </span>
                    </div>
                    <p class="text-xs sm:text-sm text-gray-600 leading-relaxed line-clamp-2">
                      大阪府の家賃相場、光熱費、日用品の価格など、生活コストを詳しく分析。
                    </p>
                  </div>
                </div>
              </div>
            </a>
          </div>
        </section>

        <!-- 安全性 -->
        <section>
          <div class="flex items-center justify-between mb-6">
            <div class="flex items-center space-x-3">
              <span class="text-2xl">🛡️</span>
              <h2 class="text-xl font-bold text-gray-900">安全性</h2>
              <span class="text-sm text-gray-500 bg-gray-100 px-3 py-1 rounded">4件の記事</span>
            </div>
            <a href="/safety/" class="text-sm text-red-500 hover:text-red-600" style="font-weight: 700;">
              もっと見る <span class="ml-1">></span>
            </a>
          </div>

          <div class="space-y-6">
            <a href="/safety-article-1/" title="大阪の治安情報と安全な地域" class="block">
              <div class="bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md transition-shadow group">
                <div class="flex h-28 sm:h-28 md:h-32">
                  <div class="w-24 sm:w-28 md:w-36 h-full flex-shrink-0">
                    <img src={`${import.meta.env.BASE_URL}assets/images/prefectures/osaka.png`}
                         alt="大阪の治安情報と安全な地域"
                         class="block w-full h-full object-cover object-left group-hover:opacity-90 transition-opacity"
                         loading="lazy" />
                  </div>
                  <div class="flex-1 p-2 sm:p-4 flex flex-col justify-center">
                    <h4 class="text-sm sm:text-base md:text-lg font-semibold text-gray-900 mb-2 leading-tight group-hover:text-blue-600 transition-colors line-clamp-2">
                      大阪の治安情報と安全な地域
                    </h4>
                    <div class="flex gap-2 mb-2">
                      <span class="inline-flex items-center px-2 sm:px-3 py-0.5 sm:py-1 text-xs font-medium bg-red-100 text-red-800 rounded-full">
                        安全性
                      </span>
                    </div>
                    <p class="text-xs sm:text-sm text-gray-600 leading-relaxed line-clamp-2">
                      大阪府内の治安状況と外国人にとって安全な居住エリアの紹介。
                    </p>
                  </div>
                </div>
              </div>
            </a>
          </div>
        </section>

        <!-- 将来性 -->
        <section>
          <div class="flex items-center justify-between mb-6">
            <div class="flex items-center space-x-3">
              <span class="text-2xl">🚀</span>
              <h2 class="text-xl font-bold text-gray-900">将来性</h2>
              <span class="text-sm text-gray-500 bg-gray-100 px-3 py-1 rounded">4件の記事</span>
            </div>
            <a href="/future-potential/" class="text-sm text-red-500 hover:text-red-600" style="font-weight: 700;">
              もっと見る <span class="ml-1">></span>
            </a>
          </div>

          <div class="space-y-6">
            <a href="/future-potential-article-1/" title="大阪・関西万博と地域発展" class="block">
              <div class="bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md transition-shadow group">
                <div class="flex h-28 sm:h-28 md:h-32">
                  <div class="w-24 sm:w-28 md:w-36 h-full flex-shrink-0">
                    <img src={`${import.meta.env.BASE_URL}assets/images/prefectures/osaka.png`}
                         alt="大阪・関西万博と地域発展"
                         class="block w-full h-full object-cover object-left group-hover:opacity-90 transition-opacity"
                         loading="lazy" />
                  </div>
                  <div class="flex-1 p-2 sm:p-4 flex flex-col justify-center">
                    <h4 class="text-sm sm:text-base md:text-lg font-semibold text-gray-900 mb-2 leading-tight group-hover:text-blue-600 transition-colors line-clamp-2">
                      大阪・関西万博と地域発展
                    </h4>
                    <div class="flex gap-2 mb-2">
                      <span class="inline-flex items-center px-2 sm:px-3 py-0.5 sm:py-1 text-xs font-medium bg-teal-100 text-teal-800 rounded-full">
                        将来性
                      </span>
                    </div>
                    <p class="text-xs sm:text-sm text-gray-600 leading-relaxed line-clamp-2">
                      2025年万博による地域経済への影響と今後の発展見通し。
                    </p>
                  </div>
                </div>
              </div>
            </a>
          </div>
        </section>

        <!-- Popular Articles Ranking (Mobile) -->
        <div class="lg:hidden mt-12">
          <div class="mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-2">人気記事ランキング</h2>
            <p class="text-sm text-gray-600">注目の記事をチェック</p>
          </div>
          
          <div class="grid gap-6">
            {popularArticles.map((article, index) => (
              <a href={article.url} class="block group">
                <div class="relative bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300">
                  <div class="relative h-48">
                    <img 
                      src={`${import.meta.env.BASE_URL}assets/images/prefectures/osaka.png`}
                      alt={article.title}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                      loading="lazy"
                    />
                    <div class="absolute top-4 left-4">
                      <div class="flex items-center justify-center w-10 h-10 bg-black bg-opacity-80 text-white font-bold rounded-full text-lg">
                        {article.rank}
                      </div>
                    </div>
                    <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent"></div>
                    <div class="absolute bottom-0 left-0 right-0 p-4">
                      <div class="mb-2">
                        <span class="inline-block px-3 py-1 bg-white bg-opacity-90 text-gray-800 text-xs font-medium rounded-full">
                          {article.categoryIcon} {article.category}
                        </span>
                      </div>
                      <h3 class="text-white font-bold text-lg leading-tight line-clamp-2 group-hover:text-yellow-300 transition-colors">
                        {article.title}
                      </h3>
                      <p class="text-white text-sm opacity-90 mt-1 line-clamp-2">{article.description}</p>
                      <div class="flex items-center text-white text-xs mt-2 opacity-80">
                        <span>👁️ {article.views.toLocaleString()}回</span>
                      </div>
                    </div>
                  </div>
                </div>
              </a>
            ))}
          </div>
        </div>

        </div>

        <!-- Popular Articles Sidebar (Desktop) -->
        <div class="hidden lg:block lg:col-span-1">
          <div class="sticky top-8">
            <div class="mb-6">
              <h2 class="text-xl font-bold text-gray-900 mb-2">人気記事</h2>
              <p class="text-sm text-gray-600">注目の記事</p>
            </div>
            
            <div class="space-y-4">
              {popularArticles.map((article, index) => (
                <a href={article.url} class="block group">
                  <div class="relative bg-white rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-all duration-300">
                    <div class="relative h-32">
                      <img 
                        src={`${import.meta.env.BASE_URL}assets/images/prefectures/osaka.png`}
                        alt={article.title}
                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                        loading="lazy"
                      />
                      <div class="absolute top-2 left-2">
                        <div class="flex items-center justify-center w-6 h-6 bg-black bg-opacity-80 text-white font-bold rounded-full text-sm">
                          {article.rank}
                        </div>
                      </div>
                      <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent"></div>
                      <div class="absolute bottom-0 left-0 right-0 p-3">
                        <div class="mb-1">
                          <span class="inline-block px-2 py-0.5 bg-white bg-opacity-90 text-gray-800 text-xs font-medium rounded-full">
                            {article.categoryIcon} {article.category}
                          </span>
                        </div>
                        <h3 class="text-white font-bold text-sm leading-tight line-clamp-2 group-hover:text-yellow-300 transition-colors">
                          {article.title}
                        </h3>
                        <div class="flex items-center text-white text-xs mt-1 opacity-80">
                          <span>👁️ {article.views.toLocaleString()}</span>
                        </div>
                      </div>
                    </div>
                  </div>
                </a>
              ))}
            </div>
          </div>
        </div>

      </div>

    </div>
  </div>
</BaseLayout>