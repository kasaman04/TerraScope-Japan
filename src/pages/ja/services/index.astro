---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const title = "安心して「日本に住む」を叶えるための調査サービス | Japan Life Research";
const description = "防災・教育・生活コスト・再開発・外国人規制など、不安なことはプロに調べてもらいましょう。現地映像やPDFレポートで、あなたの不安を安心に変えるお手伝いをします。";
const lang = "ja";

// サービスプランのデータ
const servicePlans = [
  {
    key: "light",
    name: "ライト調査",
    subtitle: "基本データレポート",
    price: "¥50,000",
    duration: "3営業日以内",
    target: "とりあえず基本情報だけ早く知りたい方向け",
    features: [
      "基本的な地域データ収集",
      "ハザードマップ分析",
      "主要施設の位置確認（スーパー・病院など）",
      "公共交通のアクセス",
      "基本レポート（日英対応）"
    ],
    notIncluded: ["現地訪問", "写真・映像", "アフターサポート"],
    recommended: false
  },
  {
    key: "standard", 
    name: "スタンダード調査",
    subtitle: "現地撮影＋生活環境分析",
    price: "¥120,000",
    duration: "5営業日以内",
    target: "本気で住む場所を検討したい方向け",
    features: [
      "ライト調査のすべて",
      "現地訪問調査（生活動線・騒音・周辺チェック）",
      "写真・動画による記録（30枚以上＋歩行動画）",
      "近隣環境の詳細分析",
      "生活コスト調査（物価・家賃相場）",
      "詳細PDFレポート（15ページ以上）",
      "アフターサポート：7日間"
    ],
    notIncluded: [],
    recommended: true
  },
  {
    key: "full",
    name: "フル調査",
    subtitle: "投資・法制度・内見代行つき",
    price: "¥300,000",
    duration: "7営業日以内",
    target: "失敗できない居住／投資判断をしたい方向け",
    features: [
      "スタンダード調査のすべて",
      "法制度・外国人規制の詳細調査",
      "将来の再開発計画調査",
      "投資価値・利回り分析",
      "内見代行（最大3件・室内対応可）",
      "アフターサポート：30日間"
    ],
    notIncluded: [],
    recommended: false
  }
];

// 調査項目のカテゴリ
const investigationCategories = [
  {
    icon: "🛡️",
    title: "防災・災害リスク",
    description: "地震・津波・水害リスクの詳細調査と避難経路の確認"
  },
  {
    icon: "🏥",
    title: "生活インフラ",
    description: "病院・学校・商業施設などの生活に必要な施設情報"
  },
  {
    icon: "💰",
    title: "土地価格と投資価値",
    description: "不動産価値の推移と将来の投資リターン分析"
  },
  {
    icon: "🏗️",
    title: "都市開発・再開発",
    description: "将来の街づくり計画と地域発展の可能性"
  },
  {
    icon: "📋",
    title: "法制度・外国人規制",
    description: "外国人の土地取得に関する法的制約と手続き"
  },
  {
    icon: "📸",
    title: "現地調査・実地検証",
    description: "実際に現地を訪問しての写真・動画による詳細記録"
  }
];

// FAQ データ
const faqItems = [
  {
    question: "日本語が話せなくても大丈夫ですか？",
    answer: "はい、すべてのレポートは日英対応です。担当スタッフも英語での対応が可能ですので、安心してご相談ください。"
  },
  {
    question: "どんな場所でも調査可能ですか？",
    answer: "基本的に全国対応ですが、離島や特殊な地域はご相談ください。アクセスが困難な地域については、追加料金が発生する場合があります。"
  },
  {
    question: "レポートの形式は？",
    answer: "PDFでの納品となります。必要に応じてGoogle Driveでも共有可能です。写真や図表を豊富に使用した、わかりやすいレポートをお届けします。"
  },
  {
    question: "内見は本当にできますか？",
    answer: "管理会社との調整後、室内の撮影・レポート作成が可能です（フル調査プランのみ）。事前に物件情報をお教えいただければ、内見の手配をいたします。"
  }
];
---

<BaseLayout title={title} description={description} lang={lang}>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-blue-900 via-blue-800 to-indigo-900 overflow-hidden">
    <!-- Background Icons -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-20 left-20 text-6xl">🗺️</div>
      <div class="absolute top-32 right-32 text-5xl">🏠</div>
      <div class="absolute bottom-32 left-40 text-4xl">📊</div>
      <div class="absolute bottom-20 right-20 text-5xl">🛡️</div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 text-7xl opacity-20">🌍</div>
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 lg:py-32">
      <div class="text-center text-white">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-8 leading-tight">
          日本に安心して暮らすために、<br>
          <span class="text-yellow-300">調査という選択を</span>
        </h1>
        
        <p class="text-xl md:text-2xl mb-12 opacity-95 max-w-4xl mx-auto leading-relaxed">
          防災・教育・生活コスト・再開発・外国人規制など、不安なことはプロに調べてもらいましょう。<br class="hidden md:block">
          現地映像やPDFレポートで、あなたの不安を安心に変えるお手伝いをします。
        </p>
        
        <div class="flex flex-col sm:flex-row gap-6 justify-center mb-8">
          <a href="/ja/contact" class="inline-flex items-center px-8 py-4 bg-yellow-400 text-blue-900 font-bold text-lg rounded-full hover:bg-yellow-300 transition-all duration-300 shadow-xl">
            <span class="mr-3">🔍</span>
            無料相談を申し込む
          </a>
          <a href="#sample" class="inline-flex items-center px-8 py-4 bg-white/20 backdrop-blur-sm text-white font-semibold text-lg rounded-full border border-white/30 hover:bg-white/30 transition-all duration-300">
            <span class="mr-3">📄</span>
            サンプルレポートを見る
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Plans Section -->
  <section id="plans" class="py-16 lg:py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          あなたの不安・ニーズに応じた<br>
          <span class="text-blue-600">3つの調査プラン</span>
        </h2>
      </div>

      <div class="grid lg:grid-cols-3 gap-8">
        {servicePlans.map((plan) => (
          <div class={`relative bg-white rounded-2xl shadow-lg border-2 ${plan.recommended ? 'border-green-400 ring-4 ring-green-100' : 'border-gray-200'} p-8 transform transition-all duration-300 hover:scale-105`}>
            {plan.recommended && (
              <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
                <span class="bg-green-500 text-white px-6 py-2 rounded-full text-sm font-bold shadow-lg">
                  おすすめ
                </span>
              </div>
            )}
            
            <div class="text-center mb-8">
              <h3 class="text-2xl font-bold text-gray-900 mb-1">{plan.name}</h3>
              <p class="text-sm text-gray-600 mb-4">{plan.subtitle}</p>
              <div class="text-4xl font-bold text-blue-600 mb-2">{plan.price}</div>
              <div class="text-sm text-gray-500 mb-4">{plan.duration}</div>
              <p class="text-gray-600 text-sm">{plan.target}</p>
            </div>
            
            <div class="mb-8">
              <h4 class="font-semibold text-gray-900 mb-4">調査内容：</h4>
              <div class="space-y-3">
                {plan.features.map((feature) => (
                  <div class="flex items-start space-x-3">
                    <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                    <span class="text-gray-700 text-sm">{feature}</span>
                  </div>
                ))}
                {plan.notIncluded.length > 0 && plan.notIncluded.map((item) => (
                  <div class="flex items-start space-x-3">
                    <svg class="w-5 h-5 text-gray-400 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                    <span class="text-gray-400 text-sm line-through">{item}</span>
                  </div>
                ))}
              </div>
            </div>
            
            <a href={`/ja/contact?plan=${plan.key}`} class={`block w-full text-center py-4 px-6 rounded-full font-bold transition-all duration-300 ${plan.recommended ? 'bg-green-500 text-white hover:bg-green-600' : 'bg-blue-600 text-white hover:bg-blue-700'}`}>
              このプランを相談
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Investigation Categories -->
  <section id="categories" class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          安心できる生活環境かどうか、<br>
          <span class="text-blue-600">6つの視点</span>から調査します
        </h2>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {investigationCategories.map((category) => (
          <div class="bg-gradient-to-br from-blue-50 to-indigo-50 rounded-2xl p-8 border border-blue-100 hover:shadow-xl transition-all duration-300 text-center">
            <div class="text-6xl mb-6">{category.icon}</div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">{category.title}</h3>
            <p class="text-gray-600">{category.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Sample Report Section -->
  <section id="sample" class="py-16 lg:py-24 bg-gray-900 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-6">
          実際のレポートをご覧ください
        </h2>
      </div>

      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="bg-white rounded-2xl p-8 shadow-2xl">
            <div class="mb-6">
              <div class="bg-blue-100 text-blue-800 px-4 py-2 rounded-full text-sm font-semibold inline-block mb-4">
                📍 神奈川県藤沢市・湘南台エリアの調査結果（要約）
              </div>
            </div>
            
            <div class="space-y-6 text-gray-800">
              <table class="w-full text-sm">
                <thead>
                  <tr class="border-b">
                    <th class="text-left py-2">評価軸</th>
                    <th class="text-left py-2">内容</th>
                    <th class="text-left py-2">評価</th>
                  </tr>
                </thead>
                <tbody>
                  <tr class="border-b">
                    <td class="py-2 font-medium">防災評価</td>
                    <td class="py-2">津波リスク極小・災害歴なし</td>
                    <td class="py-2 font-bold text-green-600">A評価</td>
                  </tr>
                  <tr class="border-b">
                    <td class="py-2 font-medium">生活利便性</td>
                    <td class="py-2">駅徒歩8分・国際学校あり</td>
                    <td class="py-2 font-bold text-blue-600">優良</td>
                  </tr>
                  <tr>
                    <td class="py-2 font-medium">投資価値</td>
                    <td class="py-2">賃貸利回り4.2%</td>
                    <td class="py-2 font-bold text-purple-600">安定</td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        
        <div class="text-center">
          <div class="mb-8">
            <h3 class="text-2xl font-bold mb-4">📷「レポートの一部を見る（PDF）」</h3>
            <p class="text-lg opacity-90 mb-6">
              実際の調査レポートのサンプルをダウンロードして、<br>
              詳細な内容をご確認いただけます
            </p>
          </div>
          
          <a href="#contact" class="inline-flex items-center px-8 py-4 bg-yellow-400 text-gray-900 font-bold text-lg rounded-full hover:bg-yellow-300 transition-all duration-300 shadow-xl">
            <span class="mr-3">📋</span>
            サンプルPDFをダウンロード
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section id="faq" class="py-16 lg:py-24 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          よくあるご質問
        </h2>
      </div>

      <div class="space-y-6">
        {faqItems.map((item, index) => (
          <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-3">
              Q. {item.question}
            </h3>
            <p class="text-gray-700 leading-relaxed">
              → {item.answer}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section id="contact" class="py-16 lg:py-24 bg-gradient-to-br from-blue-600 via-blue-700 to-indigo-800 text-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-8">
        不安を「安心」に変える一歩を
      </h2>
      
      <p class="text-xl md:text-2xl mb-12 opacity-95 max-w-4xl mx-auto">
        日本での新生活を成功させるために、<br class="hidden md:block">
        まずは専門家にご相談ください。
      </p>
      
      <div class="flex flex-col sm:flex-row gap-6 justify-center">
        <a href="/ja/contact" class="inline-flex items-center px-8 py-4 bg-yellow-400 text-blue-900 font-bold text-lg rounded-full hover:bg-yellow-300 transition-all duration-300 shadow-xl">
          <span class="mr-3">💬</span>
          無料相談してみる
        </a>
        <a href="#sample" class="inline-flex items-center px-8 py-4 bg-white/20 backdrop-blur-sm text-white font-semibold text-lg rounded-full border border-white/30 hover:bg-white/30 transition-all duration-300">
          <span class="mr-3">📄</span>
          サンプルレポートを見る
        </a>
      </div>
    </div>
  </section>
</BaseLayout>