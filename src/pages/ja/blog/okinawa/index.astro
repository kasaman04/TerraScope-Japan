    title: "那覇市",
    population: "約32万人",
    foreignPopulation: "約7,500人（2.3%）",
    features: "県庁所在地・首里城・国際通り",
    description: "沖縄県の県庁所在地で、首里城や国際通りで有名。琉球王国の歴史と現代文化が融合した沖縄の中心都市です。",
    image: "/assets/images/prefectures/okinawa.png",
    tags: ["県庁所在地", "首里城", "国際通り"],
    englishHospital: "あり",
    airport: "○（那覇空港）",
    rent: "普通",
    recommend: "琉球文化と都市生活を求める外国人",
    articles: [
      { title: "🛡️ 防災：台風・地震リスクと避難体制", url: "/ja/blog/okinawa/naha/article-01/" },
      { title: "🏥 生活インフラ：スーパー・病院・学校", url: "/ja/blog/okinawa/naha/article-02/" },
      { title: "💰 生活コスト：家賃・光熱費・交通費など", url: "/ja/blog/okinawa/naha/article-03/" },
      { title: "🏗️ 再開発・公共整備：今後の暮らしやすさ", url: "/ja/blog/okinawa/naha/article-04/" },
      { title: "📜 法制度：外国人の購入制限・手続き", url: "/ja/blog/okinawa/naha/article-05/" },
      { title: "📷 現地調査レポート：映像と写真で見る街", url: "/ja/blog/okinawa/naha/article-06/" }
    ],
    pageUrl: "/ja/blog/okinawa/naha/"
  },
  okinawacity: {
    title: "沖縄市",
    population: "約14万人",
    foreignPopulation: "約2,800人（2.0%）",
    features: "米軍基地・音楽のまち",
    description: "米軍基地が多く、アメリカ文化の影響が強い都市。音楽文化が発達し、多文化共生の街として知られています。",
    image: "/assets/images/prefectures/okinawa.png",
    tags: ["米軍基地", "音楽", "多文化"],
    englishHospital: "あり",
    airport: "○（那覇空港経由）",
    rent: "普通",
    recommend: "アメリカ文化に慣れ親しんだ外国人",
    articles: [
      { title: "🛡️ 防災：台風・地震リスクと避難体制", url: "/ja/blog/okinawa/okinawacity/article-01/" },
      { title: "🏥 生活インフラ：スーパー・病院・学校", url: "/ja/blog/okinawa/okinawacity/article-02/" },
      { title: "💰 生活コスト：家賃・光熱費・交通費など", url: "/ja/blog/okinawa/okinawacity/article-03/" },
      { title: "🏗️ 再開発・公共整備：今後の暮らしやすさ", url: "/ja/blog/okinawa/okinawacity/article-04/" },
      { title: "📜 法制度：外国人の購入制限・手続き", url: "/ja/blog/okinawa/okinawacity/article-05/" },
      { title: "📷 現地調査レポート：映像と写真で見る街", url: "/ja/blog/okinawa/okinawacity/article-06/" }
    ],
    pageUrl: "/ja/blog/okinawa/okinawacity/"
  },
  uruma: {
