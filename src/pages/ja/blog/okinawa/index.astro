const description = "沖縄県の各市区町村での外国人向け生活情報。那覇市・沖縄市・うるま市など美ら海と琉球文化の沖縄県の防災、インフラ、生活コストなど詳細情報をお届け。";
const lang = "ja";

// 沖縄県の市区町村データ
const okinawaCities = {
