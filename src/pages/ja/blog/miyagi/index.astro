  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-purple-800 to-violet-900 overflow-hidden">
    <div class="absolute inset-0 opacity-20">
      <img 
        src="/assets/images/prefectures/miyagi.png"
        alt="宮城県の街並み"
        class="w-full h-full object-cover"
      />
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 lg:py-24 text-white">
      <div class="max-w-3xl">
        <div class="mb-6">
