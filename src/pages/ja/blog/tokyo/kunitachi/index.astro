---
import BaseLayout from '../../../../../layouts/BaseLayout.astro';

const title = "東京都国立市での暮らし - 外国人向け生活ガイド";
const description = "一橋大学を中心とした文教都市・国立市の生活情報。防災、生活インフラ、コスト、法制度など外国人が安心して暮らすための詳細ガイド。";
const lang = "ja";

// 記事データ
const articles = [
  {
    id: "article-01",
    icon: "🛡️",
    title: "防災：地震・水害リスクと避難体制",
    description: "国立市の災害リスクと外国人向け防災情報を詳しく解説",
    date: "2024-01-15"
  },
  {
    id: "article-02", 
    icon: "🏥",
    title: "生活インフラ：スーパー・病院・学校",
    description: "日常生活に必要な施設の場所と利用方法を紹介",
    date: "2024-01-18"
  },
  {
    id: "article-03",
    icon: "💰",
    title: "生活コスト：家賃・光熱費・交通費など",
    description: "国立市での実際の生活費用を具体的に算出",
    date: "2024-01-22"
  },
  {
    id: "article-04",
    icon: "🏗️",
    title: "再開発・公共整備：今後の暮らしやすさ",
    description: "国立駅周辺の開発計画と将来の街の変化",
    date: "2024-01-25"
  },
  {
    id: "article-05",
    icon: "📜",
    title: "法制度：外国人の購入制限・手続き",
    description: "不動産購入や賃貸契約時の注意点と必要書類",
    date: "2024-01-28"
  },
  {
    id: "article-06",
    icon: "📷",
    title: "現地調査レポート：映像と写真で見る街",
    description: "実際に歩いて撮影した国立市の街並みと雰囲気",
    date: "2024-02-01"
  }
];

// エリア情報
const areaInfo = {
  population: "約7万5千人",
  foreignPopulation: "約1,800人（2.4%）",
  mainNationalities: "中国、韓国、アメリカ、タイ",
  averageAge: "44.8歳",
  households: "約3万7千世帯",
  area: "8.15km²"
};

// 主要スポット
const keySpots = [
  { name: "国立駅", type: "交通", description: "JR中央線、特別快速停車駅" },
  { name: "一橋大学", type: "教育", description: "国立最高峰の大学、国際交流活発" },
  { name: "大学通り", type: "商業", description: "桜並木で有名なメインストリート" },
  { name: "国立市役所", type: "行政", description: "外国人向けサービス充実" },
  { name: "くにたち郷土文化館", type: "文化", description: "地域の歴史と文化を学べる" },
  { name: "城山公園", type: "公園", description: "桜の名所、広い芝生広場" }
];
---

<BaseLayout {title} {description} {lang}>
  <!-- Breadcrumb -->
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
    <ol class="flex items-center space-x-2 text-sm text-gray-600">
      <li><a href="/ja/" class="hover:text-blue-600">ホーム</a></li>
      <li><span class="mx-2">/</span></li>
      <li><a href="/ja/blog/" class="hover:text-blue-600">地域別生活情報</a></li>
      <li><span class="mx-2">/</span></li>
      <li><a href="/ja/blog/tokyo/" class="hover:text-blue-600">東京都</a></li>
      <li><span class="mx-2">/</span></li>
      <li class="text-gray-900 font-medium">国立市</li>
    </ol>
  </nav>

  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-indigo-800 to-purple-900 overflow-hidden">
    <div class="absolute inset-0 opacity-20">
      <img 
        src="https://images.unsplash.com/photo-1551698618-1dfe5d97d256?ixlib=rb-4.0.3&auto=format&fit=crop&w=2000&q=80"
        alt="国立市の大学通り"
        class="w-full h-full object-cover"
      />
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 lg:py-24 text-white">
      <div class="max-w-3xl">
        <div class="mb-6">
          <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold bg-white/20 backdrop-blur-sm border border-white/30">
            📍 東京都国立市
          </span>
        </div>
        
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          国立市での暮らし
        </h1>
        
        <p class="text-xl md:text-2xl mb-8 opacity-95">
          一橋大学を中心とした文教都市。学術的な雰囲気と美しい街並みが魅力
        </p>
        
        <div class="grid md:grid-cols-3 gap-6 text-sm">
          <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
            <p class="font-semibold mb-1">人口</p>
            <p class="text-lg">{areaInfo.population}</p>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
            <p class="font-semibold mb-1">外国人人口</p>
            <p class="text-lg">{areaInfo.foreignPopulation}</p>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
            <p class="font-semibold mb-1">平均年齢</p>
            <p class="text-lg">{areaInfo.averageAge}</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Stats -->
  <section class="py-12 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-6 gap-4 text-center">
        <div class="bg-white rounded-lg p-4 shadow-sm">
          <div class="text-2xl mb-1">🏠</div>
          <p class="text-xs text-gray-600">世帯数</p>
          <p class="font-semibold">{areaInfo.households}</p>
        </div>
        <div class="bg-white rounded-lg p-4 shadow-sm">
          <div class="text-2xl mb-1">🌍</div>
          <p class="text-xs text-gray-600">面積</p>
          <p class="font-semibold">{areaInfo.area}</p>
        </div>
        <div class="bg-white rounded-lg p-4 shadow-sm">
          <div class="text-2xl mb-1">🚃</div>
          <p class="text-xs text-gray-600">主要駅</p>
          <p class="font-semibold">国立駅</p>
        </div>
        <div class="bg-white rounded-lg p-4 shadow-sm">
          <div class="text-2xl mb-1">🎓</div>
          <p class="text-xs text-gray-600">大学</p>
          <p class="font-semibold">一橋大学</p>
        </div>
        <div class="bg-white rounded-lg p-4 shadow-sm">
          <div class="text-2xl mb-1">🌸</div>
          <p class="text-xs text-gray-600">桜並木</p>
          <p class="font-semibold">大学通り</p>
        </div>
        <div class="bg-white rounded-lg p-4 shadow-sm">
          <div class="text-2xl mb-1">📚</div>
          <p class="text-xs text-gray-600">特徴</p>
          <p class="font-semibold">文教都市</p>
        </div>
      </div>
    </div>
  </section>

  <!-- City Characteristics -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          国立市の<span class="text-indigo-600">特徴</span>
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          文教都市として発展した国立市の魅力をご紹介
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8 mb-12">
        <div class="text-center">
          <div class="w-16 h-16 bg-indigo-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-3xl">📚</span>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">学術都市</h3>
          <p class="text-gray-600">
            一橋大学を中心とした学術的な環境。図書館や研究施設も充実しており、学習環境に最適です。
          </p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-3xl">🌸</span>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">美しい街並み</h3>
          <p class="text-gray-600">
            大学通りの桜並木をはじめ、計画的に整備された美しい街並み。四季を通じて楽しめる景観です。
          </p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-3xl">🚃</span>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">交通利便性</h3>
          <p class="text-gray-600">
            JR中央線の特別快速停車駅。新宿まで約25分、立川まで約10分とアクセス良好です。
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Articles Grid -->
  <section class="py-16 lg:py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          暮らしに役立つ<span class="text-indigo-600">6つの情報</span>
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          外国人の視点で、国立市での生活に必要な情報をまとめました
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {articles.map((article) => (
          <a 
            href={`/ja/blog/tokyo/kunitachi/${article.id}/`}
            class="group bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1"
          >
            <div class="p-6">
              <div class="flex items-center mb-4">
                <span class="text-4xl mr-4">{article.icon}</span>
                <div>
                  <h3 class="text-lg font-bold text-gray-900 group-hover:text-indigo-600 transition-colors">
                    {article.title}
                  </h3>
                </div>
              </div>
              
              <p class="text-gray-600 mb-4 line-clamp-2">
                {article.description}
              </p>
              
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-500">
                  {new Date(article.date).toLocaleDateString('ja-JP')}
                </span>
                <span class="text-indigo-600 group-hover:translate-x-2 transition-transform">
                  →
                </span>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Key Spots -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          国立市の<span class="text-indigo-600">主要スポット</span>
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          生活に便利な施設や人気の場所をピックアップ
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {keySpots.map((spot) => (
          <div class="bg-gray-50 rounded-lg p-6 shadow-md hover:shadow-lg transition-shadow">
            <div class="flex items-start justify-between mb-3">
              <h3 class="text-lg font-semibold text-gray-900">{spot.name}</h3>
              <span class="text-xs bg-indigo-100 text-indigo-800 px-2 py-1 rounded-full">
                {spot.type}
              </span>
            </div>
            <p class="text-gray-600 text-sm">{spot.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Foreign Resident Info -->
  <section class="py-16 lg:py-24 bg-gradient-to-br from-indigo-50 to-purple-100">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-white rounded-2xl p-8 lg:p-12 shadow-xl">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl font-bold text-gray-900 mb-6">
            外国人居住者向け<span class="text-indigo-600">特別情報</span>
          </h2>
          
          <div class="grid md:grid-cols-2 gap-8 text-left">
            <div class="bg-indigo-50 rounded-lg p-6">
              <h3 class="font-semibold text-gray-900 mb-3 flex items-center">
                <span class="text-2xl mr-2">🌐</span>
                多言語対応施設
              </h3>
              <ul class="space-y-2 text-sm text-gray-700">
                <li>• 国立市役所：英語・中国語対応窓口</li>
                <li>• 国立市国際交流協会：多言語相談</li>
                <li>• 一橋大学国際センター：留学生サポート</li>
                <li>• 中央図書館：外国語書籍コーナー</li>
              </ul>
            </div>
            
            <div class="bg-purple-50 rounded-lg p-6">
              <h3 class="font-semibold text-gray-900 mb-3 flex items-center">
                <span class="text-2xl mr-2">👥</span>
                学術コミュニティ
              </h3>
              <ul class="space-y-2 text-sm text-gray-700">
                <li>• 国際研究交流会（月2回開催）</li>
                <li>• 多言語カフェ（毎週土曜日）</li>
                <li>• 文化交流フェスティバル（年1回）</li>
                <li>• 学術系シェアハウス多数</li>
              </ul>
            </div>
          </div>
          
          <div class="mt-8 p-6 bg-gradient-to-r from-indigo-100 to-purple-100 rounded-lg">
            <h3 class="font-semibold text-gray-900 mb-3">🎓 学術都市の恩恵</h3>
            <p class="text-gray-700 text-sm mb-3">
              一橋大学の存在により、質の高い教育環境と国際的な研究交流の機会が豊富です。
            </p>
            <div class="grid md:grid-cols-3 gap-4 text-xs">
              <div class="text-center">
                <p class="font-semibold text-indigo-600">図書館利用</p>
                <p class="text-gray-600">市民も大学図書館利用可</p>
              </div>
              <div class="text-center">
                <p class="font-semibold text-purple-600">講座・セミナー</p>
                <p class="text-gray-600">定期的な公開講座開催</p>
              </div>
              <div class="text-center">
                <p class="font-semibold text-blue-600">ネットワーキング</p>
                <p class="text-gray-600">研究者・学生との交流機会</p>
              </div>
            </div>
          </div>
          
          <p class="mt-6 text-gray-700">
            主要国籍：{areaInfo.mainNationalities}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 lg:py-24 bg-gradient-to-br from-indigo-600 to-purple-800 text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">
        国立市について<span class="text-yellow-300">もっと詳しく知りたい</span>ですか？
      </h2>
      
      <p class="text-xl mb-8 opacity-95">
        プロによる詳細な現地調査レポートで、安心して住居選びができます
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/ja/services/" 
          class="inline-flex items-center px-8 py-4 bg-yellow-400 text-indigo-900 font-bold text-lg rounded-full hover:bg-yellow-300 transition-all duration-300"
        >
          <span class="mr-3">🔍</span>
          調査サービスを見る
        </a>
        <a 
          href="/ja/contact/" 
          class="inline-flex items-center px-8 py-4 bg-white/20 backdrop-blur-sm text-white font-semibold text-lg rounded-full border border-white/30 hover:bg-white/30 transition-all duration-300"
        >
          <span class="mr-3">💬</span>
          無料相談する
        </a>
      </div>
    </div>
  </section>
</BaseLayout>