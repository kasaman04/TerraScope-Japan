---
import BaseLayout from '../../../../../layouts/BaseLayout.astro';

const title = "札幌市での暮らし - 外国人向け生活情報";
const description = "札幌市での生活に役立つ詳細記事一覧。地域情報、アクセス、国際対応、子育て・教育、生活利便性、コスト、安全性、将来性の8つのカテゴリーで外国人の方に必要な実用情報をお届けします。";
const lang = "ja";
---

<BaseLayout {title} {description} {lang}>
  <!-- Breadcrumb -->
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
    <ol class="flex items-center space-x-2 text-sm text-gray-600">
      <li><a href="/ja/" class="hover:text-blue-600">ホーム</a></li>
      <li><span class="mx-2">/</span></li>
      <li><a href="/ja/blog/" class="hover:text-blue-600">地域別生活情報</a></li>
      <li><span class="mx-2">/</span></li>
      <li><a href="/ja/blog/hokkaido/" class="hover:text-blue-600">北海道</a></li>
      <li><span class="mx-2">/</span></li>
      <li class="text-gray-900 font-medium">札幌市</li>
