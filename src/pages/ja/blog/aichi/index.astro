---
import BaseLayout from '../../../../layouts/BaseLayout.astro';

const title = "愛知県での暮らし - 市区町村別生活情報";
const description = "愛知県の各市区町村での外国人向け生活情報。名古屋市・豊田市・岡崎市など自動車産業の中心地愛知県の防災、インフラ、生活コストなど詳細情報をお届け。";
const lang = "ja";

// 愛知県の市区町村データ
const aichiCities = {
  nagoya: {
    title: "名古屋市",
    population: "約233万人",
    foreignPopulation: "約8.5万人（3.6%）",
    features: "中部地方の中心都市",
    description: "中部地方最大の都市。製造業が盛んで、多くの外国人研修生や技能実習生が住んでいます。",
    image: "https://images.unsplash.com/photo-1560347876-cbc37d7be9f9?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80",
    tags: ["中部中心都市", "製造業", "技能実習"],
    englishHospital: "あり",
    airport: "◎（中部国際空港直結）",
    rent: "中程度",
    recommend: "製造業で働く外国人・研修生",
    articles: [
      { title: "🛡️ 防災：地震・水害リスクと避難体制", url: "/ja/blog/aichi/nagoya/article-01/" },
      { title: "🏥 生活インフラ：スーパー・病院・学校", url: "/ja/blog/aichi/nagoya/article-02/" },
      { title: "💰 生活コスト：家賃・光熱費・交通費など", url: "/ja/blog/aichi/nagoya/article-03/" },
      { title: "🏗️ 再開発・公共整備：今後の暮らしやすさ", url: "/ja/blog/aichi/nagoya/article-04/" },
      { title: "📜 法制度：外国人の購入制限・手続き", url: "/ja/blog/aichi/nagoya/article-05/" },
      { title: "📷 現地調査レポート：映像と写真で見る街", url: "/ja/blog/aichi/nagoya/article-06/" }
    ],
    pageUrl: "/ja/blog/aichi/nagoya/"
  },
  toyota: {
    title: "豊田市",
    population: "約42万人",
    foreignPopulation: "約1.8万人（4.3%）",
    features: "自動車産業の中心地",
    description: "トヨタ自動車の本社所在地。自動車関連企業が多く、国際的な製造業の街として発展しています。",
    image: "https://images.unsplash.com/photo-1624253321171-1be53e12f5f4?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80",
    tags: ["自動車産業", "トヨタ", "国際企業"],
    englishHospital: "あり",
    airport: "○（中部国際空港へ電車で）",
    rent: "中程度",
    recommend: "自動車業界で働く外国人",
    articles: [
      { title: "🛡️ 防災：地震・水害リスクと避難体制", url: "/ja/blog/aichi/toyota/article-01/" },
      { title: "🏥 生活インフラ：スーパー・病院・学校", url: "/ja/blog/aichi/toyota/article-02/" },
      { title: "💰 生活コスト：家賃・光熱費・交通費など", url: "/ja/blog/aichi/toyota/article-03/" },
      { title: "🏗️ 再開発・公共整備：今後の暮らしやすさ", url: "/ja/blog/aichi/toyota/article-04/" },
      { title: "📜 法制度：外国人の購入制限・手続き", url: "/ja/blog/aichi/toyota/article-05/" },
      { title: "📷 現地調査レポート：映像と写真で見る街", url: "/ja/blog/aichi/toyota/article-06/" }
    ],
    pageUrl: "/ja/blog/aichi/toyota/"
  }
};
---

<BaseLayout {title} {description} {lang}>
  <!-- Breadcrumb -->
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
    <ol class="flex items-center space-x-2 text-sm text-gray-600">
      <li><a href="/ja/" class="hover:text-blue-600">ホーム</a></li>
      <li><span class="mx-2">/</span></li>
      <li><a href="/ja/blog/" class="hover:text-blue-600">地域別生活情報</a></li>
      <li><span class="mx-2">/</span></li>
      <li class="text-gray-900 font-medium">愛知県</li>
    </ol>
  </nav>

  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-rose-800 to-pink-900 overflow-hidden">
    <div class="absolute inset-0 opacity-20">
      <img 
        src="https://images.unsplash.com/photo-1560347876-cbc37d7be9f9?ixlib=rb-4.0.3&auto=format&fit=crop&w=2000&q=80"
        alt="愛知県の街並み"
        class="w-full h-full object-cover"
      />
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 lg:py-24 text-white">
      <div class="max-w-3xl">
        <div class="mb-6">
          <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold bg-white/20 backdrop-blur-sm border border-white/30">
            🗾 愛知県
          </span>
        </div>
        
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          愛知県での暮らし
        </h1>
        
        <p class="text-xl md:text-2xl mb-8 opacity-95">
          自動車産業の中心地として発展する愛知県での国際的な生活
        </p>
        
        <div class="grid md:grid-cols-3 gap-6 text-sm">
          <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
            <p class="font-semibold mb-1">人口</p>
            <p class="text-lg">約755万人</p>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
            <p class="font-semibold mb-1">外国人人口</p>
            <p class="text-lg">約28万人（3.7%）</p>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
            <p class="font-semibold mb-1">市町村</p>
            <p class="text-lg">54自治体</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- City Selection -->
  <section class="py-16 lg:py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          市区町村を選んで<span class="text-rose-600">詳しい情報を見る</span>
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          下記の市区町村をクリックして、詳細な生活情報をご覧ください
        </p>
      </div>

      <!-- Cities Cards -->
      <div>
        <h3 class="text-2xl font-bold text-gray-900 mb-8 text-center">主要な市区町村</h3>
        <div class="grid md:grid-cols-2 gap-6 justify-center max-w-4xl mx-auto">
          {Object.entries(aichiCities).map(([key, city]) => (
            <a href={city.pageUrl} class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 cursor-pointer block">
              <div class="relative h-48 overflow-hidden">
                <img 
                  src={city.image}
                  alt={city.title}
                  class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                  loading="lazy"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
                <div class="absolute bottom-3 left-3 text-white">
                  <h4 class="font-bold text-lg">{city.title}</h4>
                </div>
                <!-- 右上の詳細アイコン -->
                <div class="absolute top-3 right-3 bg-white/20 backdrop-blur-sm rounded-full p-2 hover:bg-white/30 transition-colors">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                  </svg>
                </div>
              </div>
              <div class="p-4">
                <p class="text-sm text-gray-600 mb-3">{city.features}</p>
                <!-- タグ表示 -->
                <div class="flex gap-2 mb-3">
                  {city.tags && city.tags.slice(0, 2).map(tag => (
                    <span class="text-xs bg-rose-100 text-rose-800 px-2 py-1 rounded-full font-medium">{tag}</span>
                  ))}
                </div>
                <p class="text-xs text-gray-500">{city.population}</p>
              </div>
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Aichi Features -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          愛知県で暮らす<span class="text-rose-600">メリット</span>
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          外国人にとって愛知県が魅力的な理由
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-rose-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-3xl">🚗</span>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">製造業の中心地</h3>
          <p class="text-gray-600">
            自動車産業をはじめとする製造業が発達。技術系の就労機会が豊富です。
          </p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-pink-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-3xl">🌏</span>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">国際的な職場環境</h3>
          <p class="text-gray-600">
            多国籍企業が多く、外国人労働者への理解とサポート体制が整っています。
          </p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-3xl">🏭</span>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">経済の安定性</h3>
          <p class="text-gray-600">
            堅実な製造業基盤により経済が安定。長期的な居住に適した環境です。
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-16 lg:py-24 bg-gradient-to-br from-rose-600 to-pink-800 text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">
        愛知県での住居選びを<span class="text-yellow-300">プロがサポート</span>
      </h2>
      
      <p class="text-xl mb-8 opacity-95">
        各市区町村の詳細な調査レポートで、最適な住居選択をお手伝いします
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/ja/services/" 
          class="inline-flex items-center px-8 py-4 bg-yellow-400 text-rose-900 font-bold text-lg rounded-full hover:bg-yellow-300 transition-all duration-300"
        >
          <span class="mr-3">🔍</span>
          調査サービスを見る
        </a>
        <a 
          href="/ja/contact/" 
          class="inline-flex items-center px-8 py-4 bg-white/20 backdrop-blur-sm text-white font-semibold text-lg rounded-full border border-white/30 hover:bg-white/30 transition-all duration-300"
        >
          <span class="mr-3">💬</span>
          無料相談する
        </a>
      </div>
    </div>
  </section>

</BaseLayout>
