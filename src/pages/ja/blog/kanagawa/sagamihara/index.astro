---
import BaseLayout from '../../../../../layouts/BaseLayout.astro';
import CityModal from '../../../../../components/CityModal.astro';

const title = "神奈川県相模原市での暮らし - 外国人向け生活ガイド";
const description = "政令指定都市として発展する相模原市の生活情報。防災、生活インフラ、コスト、法制度など外国人が安心して暮らすための詳細ガイド。";
const lang = "ja";

// 市区町村データ
const cityData = {
  slug: "sagamihara",
  title: "相模原市",
  features: "政令指定都市・自然豊か・ファミリー向け",
  population: "約72万人",
  foreignPopulation: "約16,500人（2.3%）",
  englishHospital: "あり",
  airportAccess: "○（羽田空港まで50分）",
  rentLevel: "やや低め",
