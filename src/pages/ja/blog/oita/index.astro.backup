    // 市区町村選択時に詳細情報を表示
    function displayCityInfo() {
      const citySelect = document.getElementById("city-select");
      const cityInfo = document.getElementById("city-info");
      
      const selectedCity = citySelect.value;
      
      if (!selectedCity || !cityData[selectedCity]) {
        cityInfo.style.display = "none";
        return;
      }
      
      const city = cityData[selectedCity];
      
      // 基本情報を更新
      document.getElementById("city-title").textContent = city.title;
      document.getElementById("population").textContent = city.population;
      document.getElementById("foreign-population").textContent = city.foreignPopulation;
      document.getElementById("main-features").textContent = city.features;
      document.getElementById("city-description").textContent = city.description;
      
      // 記事リンクを更新
      const linksContainer = document.getElementById("article-links");
      linksContainer.innerHTML = "";
      
      city.articles.forEach(article => {
        const linkDiv = document.createElement("div");
        linkDiv.className = "flex items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors";
        
        const link = document.createElement("a");
        link.href = article.url;
        link.className = "flex items-center text-gray-900 hover:text-yellow-600 transition-colors";
        link.innerHTML = `
          <span class="text-2xl mr-3">${article.title.split(' ')[0]}</span>
          <div>
            <p class="font-semibold">${article.title.substring(article.title.indexOf(' ') + 1)}</p>
          </div>
        `;
        
        linkDiv.appendChild(link);
        linksContainer.appendChild(linkDiv);
      });
      
      // 詳細ページリンクを更新
      document.getElementById("view-city-page").href = city.pageUrl;
      
      // 情報ボックスを表示
      cityInfo.style.display = "block";
      
      // スムーズスクロール
      cityInfo.scrollIntoView({ behavior: 'smooth', block: 'start' });
    }

    // 人気市区町村カードクリック時
    function selectCity(cityKey) {
      const citySelect = document.getElementById("city-select");
      citySelect.value = cityKey;
      displayCityInfo();
    }

    // モーダル関連の変数とイベント処理
    let currentCityKey = '';
    const modal = document.getElementById('city-modal');
    const modalClose = document.getElementById('modal-close');
    const closeModalBtn = document.getElementById('close-modal-btn');

    // モーダルを開く
    function openCityModal(cityKey) {
      currentCityKey = cityKey;
      const city = cityData[cityKey];
      
      if (!city) return;

      // モーダル内容を更新
      document.getElementById('modal-image').src = city.image;
      document.getElementById('modal-image').alt = city.title;
      document.getElementById('modal-title').textContent = city.title;
      document.getElementById('modal-features').textContent = city.features;
      document.getElementById('modal-population').textContent = city.population;
      document.getElementById('modal-foreign-population').textContent = city.foreignPopulation;
      document.getElementById('modal-english-hospital').textContent = city.englishHospital;
      document.getElementById('modal-airport').textContent = city.airport;
      document.getElementById('modal-rent').textContent = city.rent;
      document.getElementById('modal-recommend').textContent = city.recommend;
      document.getElementById('modal-description').textContent = city.description;
      document.getElementById('modal-article-link').href = city.pageUrl;

      // タグを表示
      const tagsContainer = document.getElementById('modal-tags');
      tagsContainer.innerHTML = '';
      if (city.tags) {
        city.tags.forEach(tag => {
          const tagElement = document.createElement('span');
          tagElement.className = 'text-xs bg-yellow-100 text-yellow-800 px-3 py-1 rounded-full font-medium';
          tagElement.textContent = tag;
          tagsContainer.appendChild(tagElement);
        });
      }

      // モーダルを表示（アニメーション付き）
      modal.classList.remove('invisible', 'opacity-0');
      modal.classList.add('opacity-100');
      modal.querySelector('.bg-white').classList.remove('scale-95');
      modal.querySelector('.bg-white').classList.add('scale-100');
      document.body.style.overflow = 'hidden';
    }

    // モーダルを閉じる
    function closeModal() {
      modal.classList.add('opacity-0');
      modal.querySelector('.bg-white').classList.add('scale-95');
      modal.querySelector('.bg-white').classList.remove('scale-100');
      
      setTimeout(() => {
        modal.classList.add('invisible');
        document.body.style.overflow = 'auto';
      }, 300);
      currentCityKey = '';
    }

    // DOMContentLoadedイベントでイベントリスナーを設定
    document.addEventListener('DOMContentLoaded', function() {
      modalClose.addEventListener('click', closeModal);
      closeModalBtn.addEventListener('click', closeModal);
    });

    // モーダル背景クリックで閉じる
    modal.addEventListener('click', (e) => {
      if (e.target === modal) {
        closeModal();
      }
    });

    // ESCキーでモーダルを閉じる
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && !modal.classList.contains('invisible')) {
        closeModal();
      }
    });
  </script>
