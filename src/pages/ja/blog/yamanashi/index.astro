    foreignPopulation: "約4,200人（2.2%）",
    features: "県庁所在地・武田信玄",
    description: "山梨県の県庁所在地。武田信玄ゆかりの城下町として栄え、盆地に位置する歴史ある都市です。",
    image: "/assets/images/prefectures/yamanashi.png",
    tags: ["県庁所在地", "武田信玄", "城下町"],
    englishHospital: "あり",
    airport: "△（羽田空港経由）",
    rent: "普通",
    recommend: "歴史文化に興味のある外国人",
    articles: [
      { title: "🛡️ 防災：地震・水害リスクと避難体制", url: "/ja/blog/yamanashi/kofu/article-01/" },
      { title: "🏥 生活インフラ：スーパー・病院・学校", url: "/ja/blog/yamanashi/kofu/article-02/" },
      { title: "💰 生活コスト：家賃・光熱費・交通費など", url: "/ja/blog/yamanashi/kofu/article-03/" },
      { title: "🏗️ 再開発・公共整備：今後の暮らしやすさ", url: "/ja/blog/yamanashi/kofu/article-04/" },
      { title: "📜 法制度：外国人の購入制限・手続き", url: "/ja/blog/yamanashi/kofu/article-05/" },
      { title: "📷 現地調査レポート：映像と写真で見る街", url: "/ja/blog/yamanashi/kofu/article-06/" }
    ],
    pageUrl: "/ja/blog/yamanashi/kofu/"
  },
  fujiyoshida: {
    title: "富士吉田市",
    population: "約5万人",
    foreignPopulation: "約1,800人（3.6%）",
    features: "富士山観光・織物業",
    description: "富士山の麓に位置する観光都市。富士山観光の拠点として多くの外国人観光客が訪れ、国際色豊かな街です。",
    image: "/assets/images/prefectures/yamanashi.png",
    tags: ["富士山", "観光都市", "国際色豊か"],
    englishHospital: "あり",
    airport: "○（羽田空港経由）",
    rent: "安い",
    recommend: "観光・サービス業で働く外国人",
    articles: [
      { title: "🛡️ 防災：地震・水害リスクと避難体制", url: "/ja/blog/yamanashi/fujiyoshida/article-01/" },
      { title: "🏥 生活インフラ：スーパー・病院・学校", url: "/ja/blog/yamanashi/fujiyoshida/article-02/" },
      { title: "💰 生活コスト：家賃・光熱費・交通費など", url: "/ja/blog/yamanashi/fujiyoshida/article-03/" },
      { title: "🏗️ 再開発・公共整備：今後の暮らしやすさ", url: "/ja/blog/yamanashi/fujiyoshida/article-04/" },
      { title: "📜 法制度：外国人の購入制限・手続き", url: "/ja/blog/yamanashi/fujiyoshida/article-05/" },
      { title: "📷 現地調査レポート：映像と写真で見る街", url: "/ja/blog/yamanashi/fujiyoshida/article-06/" }
    ],
    pageUrl: "/ja/blog/yamanashi/fujiyoshida/"
  },
  minamialps: {
