    image: "https://images.unsplash.com/photo-1516214104703-d870798883c5?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80",
    tags: ["県庁所在地", "ねぶた祭り", "本州最北端"],
    englishHospital: "あり",
    airport: "◎（青森空港直結）",
    rent: "安い",
    recommend: "地方都市の落ち着いた環境を求める外国人",
    articles: [
      { title: "🛡️ 防災：地震・水害リスクと避難体制", url: "/ja/blog/aomori/aomori/article-01/" },
      { title: "🏥 生活インフラ：スーパー・病院・学校", url: "/ja/blog/aomori/aomori/article-02/" },
      { title: "💰 生活コスト：家賃・光熱費・交通費など", url: "/ja/blog/aomori/aomori/article-03/" },
      { title: "🏗️ 再開発・公共整備：今後の暮らしやすさ", url: "/ja/blog/aomori/aomori/article-04/" },
      { title: "📜 法制度：外国人の購入制限・手続き", url: "/ja/blog/aomori/aomori/article-05/" },
      { title: "📷 現地調査レポート：映像と写真で見る街", url: "/ja/blog/aomori/aomori/article-06/" }
    ],
    pageUrl: "/ja/blog/aomori/aomori/"
  },
  hirosaki: {
    title: "弘前市",
    population: "約16万人",
    foreignPopulation: "約1,200人（0.8%）",
    features: "弘前城・桜の名所",
    description: "弘前城と桜で有名な城下町。歴史と文化が息づく美しい街です。",
    image: "https://images.unsplash.com/photo-1580993889453-4b5b9ffe0da3?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80",
    tags: ["城下町", "桜の名所", "歴史文化"],
    englishHospital: "限定的",
    airport: "○（青森空港経由）",
    rent: "非常に安い",
    recommend: "歴史と文化を愛する外国人",
    articles: [
      { title: "🛡️ 防災：地震・水害リスクと避難体制", url: "/ja/blog/aomori/hirosaki/article-01/" },
      { title: "🏥 生活インフラ：スーパー・病院・学校", url: "/ja/blog/aomori/hirosaki/article-02/" },
      { title: "💰 生活コスト：家賃・光熱費・交通費など", url: "/ja/blog/aomori/hirosaki/article-03/" },
      { title: "🏗️ 再開発・公共整備：今後の暮らしやすさ", url: "/ja/blog/aomori/hirosaki/article-04/" },
      { title: "📜 法制度：外国人の購入制限・手続き", url: "/ja/blog/aomori/hirosaki/article-05/" },
      { title: "📷 現地調査レポート：映像と写真で見る街", url: "/ja/blog/aomori/hirosaki/article-06/" }
