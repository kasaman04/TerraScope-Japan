---
import BaseLayout from '../../../../layouts/BaseLayout.astro';

const title = "福岡県での暮らし - 市区町村別生活情報";
const description = "福岡県の各市区町村での外国人向け生活情報。福岡市・北九州市など九州の玄関口福岡県の防災、インフラ、生活コストなど詳細情報をお届け。";
const lang = "ja";

// 福岡県の市区町村データ
const fukuokaCities = {
  fukuoka: {
    title: "福岡市",
    population: "約161万人",
    foreignPopulation: "約3.7万人（2.3%）",
    features: "九州の中心都市",
    description: "九州最大の都市でアジアとの玄関口。IT産業や国際ビジネスが発達し、外国人にも住みやすい環境が整っています。",
    image: "https://images.unsplash.com/photo-1586551292408-e03ccbcbd4b0?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80",
    tags: ["国際都市", "IT産業", "アジア玄関口"],
    englishHospital: "あり",
    airport: "◎（福岡空港直結）",
    rent: "中程度",
    recommend: "国際的なビジネス環境を求める外国人",
    articles: [
      { title: "🛡️ 防災：地震・水害リスクと避難体制", url: "/ja/blog/fukuoka/fukuoka/article-01/" },
      { title: "🏥 生活インフラ：スーパー・病院・学校", url: "/ja/blog/fukuoka/fukuoka/article-02/" },
      { title: "💰 生活コスト：家賃・光熱費・交通費など", url: "/ja/blog/fukuoka/fukuoka/article-03/" },
      { title: "🏗️ 再開発・公共整備：今後の暮らしやすさ", url: "/ja/blog/fukuoka/fukuoka/article-04/" },
      { title: "📜 法制度：外国人の購入制限・手続き", url: "/ja/blog/fukuoka/fukuoka/article-05/" },
      { title: "📷 現地調査レポート：映像と写真で見る街", url: "/ja/blog/fukuoka/fukuoka/article-06/" }
    ],
    pageUrl: "/ja/blog/fukuoka/fukuoka/"
  },
  kitakyushu: {
    title: "北九州市",
    population: "約93万人",
    foreignPopulation: "約1.8万人（1.9%）",
    features: "工業都市・環境都市",
    description: "重工業で発展した都市で、現在は環境技術に力を入れています。アジア各国との交流も活発です。",
    image: "https://images.unsplash.com/photo-1590559899731-a382839e5549?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80",
    tags: ["工業都市", "環境技術", "製造業"],
    englishHospital: "あり",
    airport: "○（小倉駅経由で福岡空港へ）",
    rent: "比較的安い",
    recommend: "製造業・環境分野で働く外国人",
    articles: [
      { title: "🛡️ 防災：地震・水害リスクと避難体制", url: "/ja/blog/fukuoka/kitakyushu/article-01/" },
      { title: "🏥 生活インフラ：スーパー・病院・学校", url: "/ja/blog/fukuoka/kitakyushu/article-02/" },
      { title: "💰 生活コスト：家賃・光熱費・交通費など", url: "/ja/blog/fukuoka/kitakyushu/article-03/" },
      { title: "🏗️ 再開発・公共整備：今後の暮らしやすさ", url: "/ja/blog/fukuoka/kitakyushu/article-04/" },
      { title: "📜 法制度：外国人の購入制限・手続き", url: "/ja/blog/fukuoka/kitakyushu/article-05/" },
      { title: "📷 現地調査レポート：映像と写真で見る街", url: "/ja/blog/fukuoka/kitakyushu/article-06/" }
    ],
    pageUrl: "/ja/blog/fukuoka/kitakyushu/"
  }
};
---

<BaseLayout {title} {description} {lang}>
  <!-- Breadcrumb -->
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
    <ol class="flex items-center space-x-2 text-sm text-gray-600">
      <li><a href="/ja/" class="hover:text-blue-600">ホーム</a></li>
      <li><span class="mx-2">/</span></li>
      <li><a href="/ja/blog/" class="hover:text-blue-600">地域別生活情報</a></li>
      <li><span class="mx-2">/</span></li>
      <li class="text-gray-900 font-medium">福岡県</li>
    </ol>
  </nav>

  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-emerald-800 to-green-900 overflow-hidden">
    <div class="absolute inset-0 opacity-20">
      <img 
        src="https://images.unsplash.com/photo-1586551292408-e03ccbcbd4b0?ixlib=rb-4.0.3&auto=format&fit=crop&w=2000&q=80"
        alt="福岡県の街並み"
        class="w-full h-full object-cover"
      />
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 lg:py-24 text-white">
      <div class="max-w-3xl">
        <div class="mb-6">
          <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold bg-white/20 backdrop-blur-sm border border-white/30">
            🗾 福岡県
          </span>
        </div>
        
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          福岡県での暮らし
        </h1>
        
        <p class="text-xl md:text-2xl mb-8 opacity-95">
          九州の玄関口・アジアへのアクセス良好な国際的な福岡県
        </p>
        
        <div class="grid md:grid-cols-3 gap-6 text-sm">
          <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
            <p class="font-semibold mb-1">人口</p>
            <p class="text-lg">約512万人</p>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
            <p class="font-semibold mb-1">外国人人口</p>
            <p class="text-lg">約8.9万人（1.7%）</p>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
            <p class="font-semibold mb-1">市町村</p>
            <p class="text-lg">60自治体</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- City Selection -->
  <section class="py-16 lg:py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          市区町村を選んで<span class="text-emerald-600">詳しい情報を見る</span>
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          下記の市区町村をクリックして、詳細な生活情報をご覧ください
        </p>
      </div>

      <!-- Cities Cards -->
      <div>
        <h3 class="text-2xl font-bold text-gray-900 mb-8 text-center">主要な市区町村</h3>
        <div class="grid md:grid-cols-2 gap-6 justify-center max-w-4xl mx-auto">
          {Object.entries(fukuokaCities).map(([key, city]) => (
            <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 cursor-pointer"
                 >
              <div class="relative h-48 overflow-hidden">
                <img 
                  src={city.image}
                  alt={city.title}
                  class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                  loading="lazy"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
                <div class="absolute bottom-3 left-3 text-white">
                  <h4 class="font-bold text-lg">{city.title}</h4>
                </div>
                <!-- 右上の詳細アイコン -->
                <div class="absolute top-3 right-3 bg-white/20 backdrop-blur-sm rounded-full p-2 hover:bg-white/30 transition-colors">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                  </svg>
                </div>
              </div>
              <div class="p-4">
                <p class="text-sm text-gray-600 mb-3">{city.features}</p>
                <!-- タグ表示 -->
                <div class="flex gap-2 mb-3">
                  {city.tags && city.tags.slice(0, 2).map(tag => (
                    <span class="text-xs bg-emerald-100 text-emerald-800 px-2 py-1 rounded-full font-medium">{tag}</span>
                  ))}
                </div>
                <p class="text-xs text-gray-500">{city.population}</p>
              </div>
            </div>
          ))}
        </div>
      </div>

</BaseLayout>
