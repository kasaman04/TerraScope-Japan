---
import BaseLayout from '../../../../layouts/BaseLayout.astro';

const title = "兵庫県での暮らし - 市区町村別生活情報";
const description = "兵庫県の各市区町村での外国人向け生活情報。神戸市・姫路市・西宮市など国際港湾都市兵庫県の防災、インフラ、生活コストなど詳細情報をお届け。";
const lang = "ja";

// 兵庫県の市区町村データ
const hyogoCities = {
  kobe: {
    title: "神戸市",
    population: "約153万人",
    foreignPopulation: "約4.6万人（3.0%）",
    features: "国際港湾都市",
    description: "美しい港町として知られる国際都市。外国文化が根付き、多様な国際コミュニティが形成されています。",
    image: "https://images.unsplash.com/photo-1524413840807-0c3cb6fa808d?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80",
    articles: [
      { title: "🛡️ 防災：地震・水害リスクと避難体制", url: "/ja/blog/hyogo/kobe/article-01/" },
      { title: "🏥 生活インフラ：スーパー・病院・学校", url: "/ja/blog/hyogo/kobe/article-02/" },
      { title: "💰 生活コスト：家賃・光熱費・交通費など", url: "/ja/blog/hyogo/kobe/article-03/" },
      { title: "🏗️ 再開発・公共整備：今後の暮らしやすさ", url: "/ja/blog/hyogo/kobe/article-04/" },
      { title: "📜 法制度：外国人の購入制限・手続き", url: "/ja/blog/hyogo/kobe/article-05/" },
      { title: "📷 現地調査レポート：映像と写真で見る街", url: "/ja/blog/hyogo/kobe/article-06/" }
    ],
    pageUrl: "/ja/blog/hyogo/kobe/"
  },
  himeji: {
    title: "姫路市",
    population: "約53万人",
    foreignPopulation: "約8,900人（1.7%）",
    features: "世界遺産・姫路城",
    description: "世界遺産姫路城で有名な歴史都市。工業も発達し、住環境と文化のバランスが良い地域です。",
    image: "https://images.unsplash.com/photo-1578662996442-48f60103fc96?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80",
    articles: [
      { title: "🛡️ 防災：地震・水害リスクと避難体制", url: "/ja/blog/hyogo/himeji/article-01/" },
      { title: "🏥 生活インフラ：スーパー・病院・学校", url: "/ja/blog/hyogo/himeji/article-02/" },
      { title: "💰 生活コスト：家賃・光熱費・交通費など", url: "/ja/blog/hyogo/himeji/article-03/" },
      { title: "🏗️ 再開発・公共整備：今後の暮らしやすさ", url: "/ja/blog/hyogo/himeji/article-04/" },
      { title: "📜 法制度：外国人の購入制限・手続き", url: "/ja/blog/hyogo/himeji/article-05/" },
      { title: "📷 現地調査レポート：映像と写真で見る街", url: "/ja/blog/hyogo/himeji/article-06/" }
    ],
    pageUrl: "/ja/blog/hyogo/himeji/"
  }
};
---

<BaseLayout {title} {description} {lang}>
  <!-- Breadcrumb -->
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
    <ol class="flex items-center space-x-2 text-sm text-gray-600">
      <li><a href="/ja/" class="hover:text-blue-600">ホーム</a></li>
      <li><span class="mx-2">/</span></li>
      <li><a href="/ja/blog/" class="hover:text-blue-600">地域別生活情報</a></li>
      <li><span class="mx-2">/</span></li>
      <li class="text-gray-900 font-medium">兵庫県</li>
    </ol>
  </nav>

  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-teal-800 to-cyan-900 overflow-hidden">
    <div class="absolute inset-0 opacity-20">
      <img 
        src="https://images.unsplash.com/photo-1524413840807-0c3cb6fa808d?ixlib=rb-4.0.3&auto=format&fit=crop&w=2000&q=80"
        alt="兵庫県の街並み"
        class="w-full h-full object-cover"
      />
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 lg:py-24 text-white">
      <div class="max-w-3xl">
        <div class="mb-6">
          <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold bg-white/20 backdrop-blur-sm border border-white/30">
            🗾 兵庫県
          </span>
        </div>
        
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          兵庫県での暮らし
        </h1>
        
        <p class="text-xl md:text-2xl mb-8 opacity-95">
          神戸港を中心とした国際都市で多様な文化が息づく兵庫県
        </p>
        
        <div class="grid md:grid-cols-3 gap-6 text-sm">
          <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
            <p class="font-semibold mb-1">人口</p>
            <p class="text-lg">約546万人</p>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
            <p class="font-semibold mb-1">外国人人口</p>
            <p class="text-lg">約11万人（2.0%）</p>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
            <p class="font-semibold mb-1">市町</p>
            <p class="text-lg">41自治体</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- City Selection -->
  <section class="py-16 lg:py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          市区町村を選んで<span class="text-teal-600">詳しい情報を見る</span>
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          プルダウンから市区町村を選択して、詳細な生活情報をご覧ください
        </p>
      </div>

      <!-- Selection Interface -->
      <div class="max-w-2xl mx-auto mb-12">
        <div class="bg-white rounded-2xl p-8 shadow-lg">
          <label for="city-select" class="block text-lg font-semibold text-gray-700 mb-4">
            📍 兵庫県の市区町村を選択
          </label>
          <select id="city-select" onchange="displayCityInfo()" 
                  class="w-full px-6 py-4 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-teal-500 text-lg">
            <option value="">市区町村を選択してください</option>
            {Object.entries(hyogoCities).map(([key, city]) => (
              <option value={key}>{city.title}</option>
            ))}
          </select>
        </div>
      </div>

      <!-- City Information Display -->
      <div id="city-info" class="max-w-4xl mx-auto" style="display: none;">
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
          <div class="bg-gradient-to-r from-teal-600 to-cyan-800 px-8 py-6 text-white">
            <h3 id="city-title" class="text-2xl font-bold mb-2"></h3>
            <div class="grid md:grid-cols-3 gap-4 text-sm">
              <div>
                <p id="population" class="opacity-90"></p>
              </div>
              <div>
                <p id="foreign-population" class="opacity-90"></p>
              </div>
              <div>
                <p id="main-features" class="opacity-90"></p>
              </div>
            </div>
          </div>
          
          <div class="p-8">
            <p id="city-description" class="text-gray-600 mb-8"></p>
            
            <h4 class="text-xl font-bold text-gray-900 mb-6">暮らしに役立つ記事一覧</h4>
            <div id="article-links" class="grid md:grid-cols-2 gap-4"></div>
            
            <div class="mt-8 text-center">
              <a id="view-city-page" href="#" 
                 class="inline-flex items-center px-8 py-4 bg-teal-600 text-white font-bold text-lg rounded-full hover:bg-teal-700 transition-all duration-300">
                <span class="mr-3">📋</span>
                詳細ページを見る
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Popular Cities Preview -->
      <div class="mt-16">
        <h3 class="text-2xl font-bold text-gray-900 mb-8 text-center">主要な市区町村</h3>
        <div class="grid md:grid-cols-2 gap-6 justify-center max-w-4xl mx-auto">
          {Object.entries(hyogoCities).map(([key, city]) => (
            <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow cursor-pointer"
                 onclick={`selectCity('${key}')`}>
              <div class="relative h-32 overflow-hidden">
                <img 
                  src={city.image}
                  alt={city.title}
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
                <div class="absolute bottom-2 left-3 text-white">
                  <h4 class="font-bold">{city.title}</h4>
                </div>
              </div>
              <div class="p-4">
                <p class="text-sm text-gray-600 mb-2">{city.features}</p>
                <p class="text-xs text-gray-500">{city.population}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Hyogo Features -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          兵庫県で暮らす<span class="text-teal-600">メリット</span>
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          外国人にとって兵庫県が魅力的な理由
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-teal-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-3xl">⚓</span>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">国際港湾都市</h3>
          <p class="text-gray-600">
            神戸港を中心とした国際的な環境。異国情緒あふれる街並みと多様な文化交流。
          </p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-cyan-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-3xl">🏰</span>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">歴史と文化</h3>
          <p class="text-gray-600">
            姫路城をはじめとする豊富な歴史遺産。伝統文化と現代文化が共存しています。
          </p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-3xl">🌊</span>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">自然環境</h3>
          <p class="text-gray-600">
            瀬戸内海と山々に囲まれた豊かな自然環境。温暖な気候で住みやすい地域です。
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-16 lg:py-24 bg-gradient-to-br from-teal-600 to-cyan-800 text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">
        兵庫県での住居選びを<span class="text-yellow-300">プロがサポート</span>
      </h2>
      
      <p class="text-xl mb-8 opacity-95">
        各市区町村の詳細な調査レポートで、最適な住居選択をお手伝いします
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/ja/services/" 
          class="inline-flex items-center px-8 py-4 bg-yellow-400 text-teal-900 font-bold text-lg rounded-full hover:bg-yellow-300 transition-all duration-300"
        >
          <span class="mr-3">🔍</span>
          調査サービスを見る
        </a>
        <a 
          href="/ja/contact/" 
          class="inline-flex items-center px-8 py-4 bg-white/20 backdrop-blur-sm text-white font-semibold text-lg rounded-full border border-white/30 hover:bg-white/30 transition-all duration-300"
        >
          <span class="mr-3">💬</span>
          無料相談する
        </a>
      </div>
    </div>
  </section>

  <script is:inline>
    // 兵庫県市区町村データ
    const cityData = {
      kobe: {
        title: "神戸市",
        population: "約153万人",
        foreignPopulation: "約4.6万人（3.0%）",
        features: "国際港湾都市",
        description: "美しい港町として知られる国際都市。外国文化が根付き、多様な国際コミュニティが形成されています。",
        articles: [
          { title: "🛡️ 防災：地震・水害リスクと避難体制", url: "/ja/blog/hyogo/kobe/article-01/" },
          { title: "🏥 生活インフラ：スーパー・病院・学校", url: "/ja/blog/hyogo/kobe/article-02/" },
          { title: "💰 生活コスト：家賃・光熱費・交通費など", url: "/ja/blog/hyogo/kobe/article-03/" },
          { title: "🏗️ 再開発・公共整備：今後の暮らしやすさ", url: "/ja/blog/hyogo/kobe/article-04/" },
          { title: "📜 法制度：外国人の購入制限・手続き", url: "/ja/blog/hyogo/kobe/article-05/" },
          { title: "📷 現地調査レポート：映像と写真で見る街", url: "/ja/blog/hyogo/kobe/article-06/" }
        ],
        pageUrl: "/ja/blog/hyogo/kobe/"
      },
      himeji: {
        title: "姫路市",
        population: "約53万人",
        foreignPopulation: "約8,900人（1.7%）",
        features: "世界遺産・姫路城",
        description: "世界遺産姫路城で有名な歴史都市。工業も発達し、住環境と文化のバランスが良い地域です。",
        articles: [
          { title: "🛡️ 防災：地震・水害リスクと避難体制", url: "/ja/blog/hyogo/himeji/article-01/" },
          { title: "🏥 生活インフラ：スーパー・病院・学校", url: "/ja/blog/hyogo/himeji/article-02/" },
          { title: "💰 生活コスト：家賃・光熱費・交通費など", url: "/ja/blog/hyogo/himeji/article-03/" },
          { title: "🏗️ 再開発・公共整備：今後の暮らしやすさ", url: "/ja/blog/hyogo/himeji/article-04/" },
          { title: "📜 法制度：外国人の購入制限・手続き", url: "/ja/blog/hyogo/himeji/article-05/" },
          { title: "📷 現地調査レポート：映像と写真で見る街", url: "/ja/blog/hyogo/himeji/article-06/" }
        ],
        pageUrl: "/ja/blog/hyogo/himeji/"
      }
    };

    // DOMContentLoaded内でイベントリスナーを設定
    document.addEventListener('DOMContentLoaded', function() {
      // 関数をグローバルスコープに公開
      window.displayCityInfo = displayCityInfo;
      window.selectCity = selectCity;
    });

    // 市区町村選択時に詳細情報を表示
    function displayCityInfo() {
      const citySelect = document.getElementById("city-select");
      const cityInfo = document.getElementById("city-info");
      
      const selectedCity = citySelect.value;
      
      if (!selectedCity || !cityData[selectedCity]) {
        cityInfo.style.display = "none";
        return;
      }
      
      const city = cityData[selectedCity];
      
      // 基本情報を更新
      document.getElementById("city-title").textContent = city.title;
      document.getElementById("population").textContent = city.population;
      document.getElementById("foreign-population").textContent = city.foreignPopulation;
      document.getElementById("main-features").textContent = city.features;
      document.getElementById("city-description").textContent = city.description;
      
      // 記事リンクを更新
      const linksContainer = document.getElementById("article-links");
      linksContainer.innerHTML = "";
      
      city.articles.forEach(article => {
        const linkDiv = document.createElement("div");
        linkDiv.className = "flex items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors";
        
        const link = document.createElement("a");
        link.href = article.url;
        link.className = "flex items-center text-gray-900 hover:text-teal-600 transition-colors";
        link.innerHTML = `
          <span class="text-2xl mr-3">${article.title.split(' ')[0]}</span>
          <div>
            <p class="font-semibold">${article.title.substring(article.title.indexOf(' ') + 1)}</p>
          </div>
        `;
        
        linkDiv.appendChild(link);
        linksContainer.appendChild(linkDiv);
      });
      
      // 詳細ページリンクを更新
      document.getElementById("view-city-page").href = city.pageUrl;
      
      // 情報ボックスを表示
      cityInfo.style.display = "block";
      
      // スムーズスクロール
      cityInfo.scrollIntoView({ behavior: 'smooth', block: 'start' });
    }

    // 人気市区町村カードクリック時
    function selectCity(cityKey) {
      const citySelect = document.getElementById("city-select");
      citySelect.value = cityKey;
      displayCityInfo();
    }
  </script>
</BaseLayout>