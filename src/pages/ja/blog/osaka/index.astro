      if (modalImage) {
        modalImage.src = city.image || '';
        modalImage.alt = city.title || '';
      }
      if (modalTitle) modalTitle.textContent = city.title || '';
      if (modalFeatures) modalFeatures.textContent = city.features || '';
      if (modalPopulation) modalPopulation.textContent = city.population || '';
      if (modalForeignPopulation) modalForeignPopulation.textContent = city.foreignPopulation || '';
