          { title: "🏗️ 再開発・公共整備：今後の暮らしやすさ", url: "/ja/blog/osaka/osaka/article-04/" },
          { title: "📜 法制度：外国人の購入制限・手続き", url: "/ja/blog/osaka/osaka/article-05/" },
          { title: "📷 現地調査レポート：映像と写真で見る街", url: "/ja/blog/osaka/osaka/article-06/" }
        ],
        pageUrl: "/ja/blog/osaka/osaka/"
      },
      sakai: {
        title: "堺市",
        population: "約83万人",
        foreignPopulation: "約2万人（2.4%）",
        features: "歴史ある商業都市",
        description: "古墳群で有名な歴史都市。大阪市に隣接し、住環境と利便性のバランスが良い地域です。",
        image: "https://images.unsplash.com/photo-1590559899731-a382839e5549?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80",
        tags: ["古墳群", "歴史都市", "住環境良好", "大阪隣接"],
        englishHospital: "限定的",
        airport: "○（関西空港経由）",
        rent: "安い",
        recommend: "歴史と住環境を重視する外国人",
        articles: [
          { title: "🛡️ 防災：地震・水害リスクと避難体制", url: "/ja/blog/osaka/sakai/article-01/" },
          { title: "🏥 生活インフラ：スーパー・病院・学校", url: "/ja/blog/osaka/sakai/article-02/" },
          { title: "💰 生活コスト：家賃・光熱費・交通費など", url: "/ja/blog/osaka/sakai/article-03/" },
          { title: "🏗️ 再開発・公共整備：今後の暮らしやすさ", url: "/ja/blog/osaka/sakai/article-04/" },
          { title: "📜 法制度：外国人の購入制限・手続き", url: "/ja/blog/osaka/sakai/article-05/" },
          { title: "📷 現地調査レポート：映像と写真で見る街", url: "/ja/blog/osaka/sakai/article-06/" }
        ],
        pageUrl: "/ja/blog/osaka/sakai/"
      },
      toyonaka: {
        title: "豊中市",
        population: "約40万人",
        foreignPopulation: "約8,500人（2.1%）",
        features: "住宅地・空港アクセス良好",
        description: "伊丹空港に近く、大阪都心部へのアクセスも良好。閑静な住宅地として人気の高いエリアです。",
        image: "https://images.unsplash.com/photo-1586551292408-e03ccbcbd4b0?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80",
        tags: ["空港近接", "住宅地", "アクセス良好", "閑静"],
        englishHospital: "限定的",
        airport: "◎（伊丹空港近接）",
        rent: "やや安い",
        recommend: "空港利用が多い外国人",
        articles: [
          { title: "🛡️ 防災：地震・水害リスクと避難体制", url: "/ja/blog/osaka/toyonaka/article-01/" },
          { title: "🏥 生活インフラ：スーパー・病院・学校", url: "/ja/blog/osaka/toyonaka/article-02/" },
          { title: "💰 生活コスト：家賃・光熱費・交通費など", url: "/ja/blog/osaka/toyonaka/article-03/" },
          { title: "🏗️ 再開発・公共整備：今後の暮らしやすさ", url: "/ja/blog/osaka/toyonaka/article-04/" },
          { title: "📜 法制度：外国人の購入制限・手続き", url: "/ja/blog/osaka/toyonaka/article-05/" },
          { title: "📷 現地調査レポート：映像と写真で見る街", url: "/ja/blog/osaka/toyonaka/article-06/" }
        ],
        pageUrl: "/ja/blog/osaka/toyonaka/"
      }
    };

    // モーダル制御変数
    let currentCityKey = '';
    let modal = null;
    
    // モーダルを開く
    function openCityModal(cityKey) {
      currentCityKey = cityKey;
      const city = cityData[cityKey];
      
      if (!city) {
        console.error('City data not found for key:', cityKey);
        return;
      }

      // モーダル要素を取得（存在チェック付き）
      modal = document.getElementById('city-modal');
      if (!modal) {
        console.error('Modal element not found');
        return;
      }

      // モーダル内容を更新（存在チェック付き）
      const modalImage = document.getElementById('modal-image');
      const modalTitle = document.getElementById('modal-title');
      const modalFeatures = document.getElementById('modal-features');
      const modalPopulation = document.getElementById('modal-population');
      const modalForeignPopulation = document.getElementById('modal-foreign-population');
      const modalEnglishHospital = document.getElementById('modal-english-hospital');
      const modalAirport = document.getElementById('modal-airport');
      const modalRent = document.getElementById('modal-rent');
      const modalRecommend = document.getElementById('modal-recommend');
      const modalDescription = document.getElementById('modal-description');
      const modalArticleLink = document.getElementById('modal-article-link');
      const tagsContainer = document.getElementById('modal-tags');

      if (modalImage) {
        modalImage.src = city.image || '';
        modalImage.alt = city.title || '';
      }
      if (modalTitle) modalTitle.textContent = city.title || '';
      if (modalFeatures) modalFeatures.textContent = city.features || '';
      if (modalPopulation) modalPopulation.textContent = city.population || '';
      if (modalForeignPopulation) modalForeignPopulation.textContent = city.foreignPopulation || '';
      if (modalEnglishHospital) modalEnglishHospital.textContent = city.englishHospital || '';
      if (modalAirport) modalAirport.textContent = city.airport || '';
      if (modalRent) modalRent.textContent = city.rent || '';
      if (modalRecommend) modalRecommend.textContent = city.recommend || '';
      if (modalDescription) modalDescription.textContent = city.description || '';
      if (modalArticleLink) modalArticleLink.href = city.pageUrl || '#';

      // タグを表示
      if (tagsContainer) {
        tagsContainer.innerHTML = '';
        if (city.tags && Array.isArray(city.tags)) {
          city.tags.forEach(tag => {
            const tagElement = document.createElement('span');
            tagElement.className = 'text-xs bg-red-100 text-red-800 px-3 py-1 rounded-full font-medium';
            tagElement.textContent = tag;
            tagsContainer.appendChild(tagElement);
          });
        }
      }

      // モーダルを表示（アニメーション付き）
      modal.classList.remove('invisible', 'opacity-0');
      modal.classList.add('opacity-100');
      const modalContent = modal.querySelector('.bg-white');
      if (modalContent) {
        modalContent.classList.remove('scale-95');
        modalContent.classList.add('scale-100');
      }
      document.body.style.overflow = 'hidden';
    }

    // モーダルを閉じる
    function closeModal() {
      if (!modal) return;
      
      modal.classList.add('opacity-0');
      const modalContent = modal.querySelector('.bg-white');
      if (modalContent) {
        modalContent.classList.add('scale-95');
        modalContent.classList.remove('scale-100');
      }
      
      setTimeout(() => {
        modal.classList.add('invisible');
        document.body.style.overflow = 'auto';
      }, 300);
      currentCityKey = '';
    }

    document.addEventListener('DOMContentLoaded', function() {
      // モーダル関連のイベントリスナーを設定
      const modalClose = document.getElementById('modal-close');
      const closeModalBtn = document.getElementById('close-modal-btn');
      
      if (modalClose) modalClose.addEventListener('click', closeModal);
      if (closeModalBtn) closeModalBtn.addEventListener('click', closeModal);

      // モーダル背景クリックで閉じる
      if (modal) {
        modal.addEventListener('click', (e) => {
          if (e.target === modal) {
            closeModal();
          }
        });
      }

      // ESCキーで閉じる
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && modal && !modal.classList.contains('invisible')) {
          closeModal();
        }
      });
      
    });
