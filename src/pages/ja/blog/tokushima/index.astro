    englishHospital: "あり",
    airport: "○（徳島阿波おどり空港）",
    rent: "普通",
    recommend: "日本文化に興味のある外国人",
    articles: [
      { title: "🛡️ 防災：地震・水害リスクと避難体制", url: "/ja/blog/tokushima/tokushima/article-01/" },
      { title: "🏥 生活インフラ：スーパー・病院・学校", url: "/ja/blog/tokushima/tokushima/article-02/" },
