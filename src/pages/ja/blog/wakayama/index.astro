    tags: ["県庁所在地", "和歌山城", "城下町"],
    englishHospital: "あり",
    airport: "○（関西国際空港経由）",
    rent: "安い",
    recommend: "温暖な気候を求める外国人",
    articles: [
      { title: "🛡️ 防災：地震・水害リスクと避難体制", url: "/ja/blog/wakayama/wakayama/article-01/" },
      { title: "🏥 生活インフラ：スーパー・病院・学校", url: "/ja/blog/wakayama/wakayama/article-02/" },
      { title: "💰 生活コスト：家賃・光熱費・交通費など", url: "/ja/blog/wakayama/wakayama/article-03/" },
      { title: "🏗️ 再開発・公共整備：今後の暮らしやすさ", url: "/ja/blog/wakayama/wakayama/article-04/" },
      { title: "📜 法制度：外国人の購入制限・手続き", url: "/ja/blog/wakayama/wakayama/article-05/" },
      { title: "📷 現地調査レポート：映像と写真で見る街", url: "/ja/blog/wakayama/wakayama/article-06/" }
    ],
    pageUrl: "/ja/blog/wakayama/wakayama/"
  },
  tanabe: {
    title: "田辺市",
    population: "約7万人",
    foreignPopulation: "約1,200人（1.7%）",
    features: "熊野古道・世界遺産",
    description: "熊野古道の玄関口として有名な世界遺産の街。豊かな自然と歴史文化が残る魅力的な地域です。",
    image: "/assets/images/prefectures/wakayama.png",
    tags: ["熊野古道", "世界遺産", "自然"],
    englishHospital: "あり",
    airport: "○（関西国際空港経由）",
    rent: "安い",
    recommend: "自然・歴史に興味のある外国人",
    articles: [
      { title: "🛡️ 防災：地震・水害リスクと避難体制", url: "/ja/blog/wakayama/tanabe/article-01/" },
      { title: "🏥 生活インフラ：スーパー・病院・学校", url: "/ja/blog/wakayama/tanabe/article-02/" },
      { title: "💰 生活コスト：家賃・光熱費・交通費など", url: "/ja/blog/wakayama/tanabe/article-03/" },
      { title: "🏗️ 再開発・公共整備：今後の暮らしやすさ", url: "/ja/blog/wakayama/tanabe/article-04/" },
      { title: "📜 法制度：外国人の購入制限・手続き", url: "/ja/blog/wakayama/tanabe/article-05/" },
      { title: "📷 現地調査レポート：映像と写真で見る街", url: "/ja/blog/wakayama/tanabe/article-06/" }
    ],
