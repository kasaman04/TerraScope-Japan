const description = "香川県の各市区町村での外国人向け生活情報。高松市・丸亀市・坂出市などうどんと瀬戸内海の香川県の防災、インフラ、生活コストなど詳細情報をお届け。";
const lang = "ja";

// 香川県の市区町村データ
const kagawaCities = {
