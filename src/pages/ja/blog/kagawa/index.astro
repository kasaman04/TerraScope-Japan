    title: "高松市",
    population: "約42万人",
    foreignPopulation: "約6,800人（1.6%）",
    features: "県庁所在地・栗林公園",
    description: "香川県の県庁所在地。栗林公園などの名勝地があり、四国の政治・経済の中心都市として発展しています。",
    image: "/assets/images/prefectures/kagawa.png",
    tags: ["県庁所在地", "栗林公園", "四国の中心"],
    englishHospital: "あり",
    airport: "○（高松空港）",
    rent: "普通",
    recommend: "四国での生活を希望する外国人",
    articles: [
      { title: "🛡️ 防災：地震・水害リスクと避難体制", url: "/ja/blog/kagawa/takamatsu/article-01/" },
      { title: "🏥 生活インフラ：スーパー・病院・学校", url: "/ja/blog/kagawa/takamatsu/article-02/" },
      { title: "💰 生活コスト：家賃・光熱費・交通費など", url: "/ja/blog/kagawa/takamatsu/article-03/" },
      { title: "🏗️ 再開発・公共整備：今後の暮らしやすさ", url: "/ja/blog/kagawa/takamatsu/article-04/" },
      { title: "📜 法制度：外国人の購入制限・手続き", url: "/ja/blog/kagawa/takamatsu/article-05/" },
      { title: "📷 現地調査レポート：映像と写真で見る街", url: "/ja/blog/kagawa/takamatsu/article-06/" }
    ],
    pageUrl: "/ja/blog/kagawa/takamatsu/"
  },
  marugame: {
    title: "丸亀市",
    population: "約11万人",
    foreignPopulation: "約2,100人（1.9%）",
    features: "丸亀城・団扇",
    description: "現存天守の丸亀城で有名な城下町。丸亀うちわの産地としても知られ、伝統工芸が息づく都市です。",
    image: "/assets/images/prefectures/kagawa.png",
    tags: ["丸亀城", "団扇", "城下町"],
    englishHospital: "あり",
    airport: "○（高松空港経由）",
    rent: "普通",
    recommend: "伝統文化に興味のある外国人",
    articles: [
      { title: "🛡️ 防災：地震・水害リスクと避難体制", url: "/ja/blog/kagawa/marugame/article-01/" },
      { title: "🏥 生活インフラ：スーパー・病院・学校", url: "/ja/blog/kagawa/marugame/article-02/" },
      { title: "💰 生活コスト：家賃・光熱費・交通費など", url: "/ja/blog/kagawa/marugame/article-03/" },
      { title: "🏗️ 再開発・公共整備：今後の暮らしやすさ", url: "/ja/blog/kagawa/marugame/article-04/" },
      { title: "📜 法制度：外国人の購入制限・手続き", url: "/ja/blog/kagawa/marugame/article-05/" },
      { title: "📷 現地調査レポート：映像と写真で見る街", url: "/ja/blog/kagawa/marugame/article-06/" }
    ],
    pageUrl: "/ja/blog/kagawa/marugame/"
  },
