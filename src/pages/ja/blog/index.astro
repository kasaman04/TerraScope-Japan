    const prefectureCards = document.querySelectorAll('a[href*="/ja/blog/"]');
    
    prefectureCards.forEach(card => {
      // モーダル対象の県のみ処理
      const href = card.getAttribute('href');
      const slug = href.split('/')[3];
      
      if (['nagano', 'nagasaki', 'nara', 'niigata', 'oita'].includes(slug)) {
        card.addEventListener('click', function(e) {
          e.preventDefault();
          showModal(slug);
        });
      }
    });

    // モーダル表示関数
    function showModal(prefectureSlug) {
      const prefectureData = cityData[prefectureSlug];
      
      if (!prefectureData) {
        console.error('Prefecture data not found:', prefectureSlug);
        return;
      }

      // 県名を取得
      const prefectureNames = {
        'nagano': '長野県',
        'nagasaki': '長崎県', 
        'nara': '奈良県',
        'niigata': '新潟県',
        'oita': '大分県'
      };
      
      modalTitle.textContent = prefectureNames[prefectureSlug] + 'の都市情報';
      
      // 都市一覧を生成
      cityList.innerHTML = '';
      Object.keys(prefectureData).forEach(citySlug => {
        const city = prefectureData[citySlug];
        const cityCard = createCityCard(city);
        cityList.appendChild(cityCard);
      });
      
      // モーダルを表示
      modal.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    }

    // 都市カード作成関数
    function createCityCard(city) {
      const card = document.createElement('div');
      card.className = 'bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1';
      
      card.innerHTML = `
        <div class="relative h-48 overflow-hidden">
          <img 
            src="${city.image}"
            alt="${city.title}"
            class="w-full h-full object-cover hover:scale-110 transition-transform duration-300"
            loading="lazy"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
          <div class="absolute bottom-4 left-4 text-white">
            <h3 class="text-xl font-bold mb-1">${city.title}</h3>
            <p class="text-sm opacity-90">${city.features}</p>
          </div>
        </div>
        
        <div class="p-6">
          <div class="mb-4">
            <p class="text-gray-700 mb-2"><strong>人口：</strong>${city.population}</p>
            <p class="text-gray-700 mb-2"><strong>外国人人口：</strong>${city.foreignPopulation}</p>
            <p class="text-gray-700 mb-3">${city.description}</p>
          </div>
          
          <div class="space-y-2 text-sm text-gray-600 mb-4">
            <p><strong>🏥 多言語対応病院：</strong>${city.englishHospital}</p>
            <p><strong>✈️ 最寄り空港：</strong>${city.airport}</p>
            <p><strong>🏠 家賃相場：</strong>${city.rent}</p>
          </div>
          
          <div class="mb-4">
            <div class="flex flex-wrap gap-2">
              ${city.tags.map(tag => `<span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm font-medium">${tag}</span>`).join('')}
            </div>
          </div>
          
          <div class="bg-blue-50 rounded-lg p-4 mb-4">
            <p class="text-sm text-blue-800">
              <strong>💡 おすすめ：</strong>${city.recommend}
            </p>
          </div>
          
          <a 
            href="${city.pageUrl}" 
            class="block w-full bg-blue-600 text-white text-center py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors"
          >
            詳細記事を見る →
          </a>
        </div>
      `;
      
      return card;
    }

    // モーダル閉じる機能
    function closeModal() {
      modal.classList.add('hidden');
      document.body.style.overflow = 'auto';
    }

    // イベントリスナー
    closeButton?.addEventListener('click', closeModal);
    modalOverlay?.addEventListener('click', closeModal);
    
    // ESCキーでモーダルを閉じる
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && !modal.classList.contains('hidden')) {
        closeModal();
      }
    });
  });
