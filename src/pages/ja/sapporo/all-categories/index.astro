const lang = "ja";

// 札幌市で人気の記事ランキング
const popularArticles = [
  {
    title: "札幌の雪対策と冬の生活",
    category: "生活利便性",
    url: "/sapporo/living-convenience-article-1/"
  },
  {
    title: "新千歳空港からのアクセス",
    category: "アクセス",
    url: "/sapporo/access-article-1/"
  },
  {
    title: "札幌の住宅事情：家賃・光熱費",
