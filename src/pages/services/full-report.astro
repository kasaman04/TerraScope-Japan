---
import BaseLayout from '../../layouts/BaseLayout.astro';
import HeroStatic from '../../components/HeroStatic.astro';
import Checklist from '../../components/Checklist.astro';
import PdfPreview from '../../components/PdfPreview.astro';
import StepTimeline from '../../components/StepTimeline.astro';
import Accordion from '../../components/Accordion.astro';
import faqData from '../../assets/data/faq_full.js';

const pageData = {
  title: 'Full Risk Report - Comprehensive Land Due Diligence',
  description: 'Our most comprehensive land assessment service. Get detailed risk analysis, legal review, and on-site inspection in 7 business days.',
  lang: 'en'
};

const checklistItems = [
  { text: "On-site field survey by licensed surveyor", completed: true },
  { text: "Boundary verification and access road assessment", completed: true },
  { text: "Legal title search and ownership history", completed: true },
  { text: "Zoning compliance and building permit review", completed: true },
  { text: "Environmental hazard assessment (flood, landslide, earthquake)", completed: true },
  { text: "Utility availability and connection costs", completed: true },
  { text: "Soil quality and contamination screening", completed: true },
  { text: "Infrastructure and transportation analysis", completed: true },
  { text: "Local market conditions and comparable sales", completed: true },
  { text: "Tax implications and ongoing costs", completed: true },
  { text: "Investment potential and development restrictions", completed: true },
  { text: "Detailed risk rating and mitigation strategies", completed: true },
  { text: "18-page professional report with executive summary", completed: true },
  { text: "30-day post-delivery support and consultation", completed: true }
];

const timelineSteps = [
  {
    title: "Initial Assessment",
    description: "We analyze your property requirements and conduct preliminary research using government databases and satellite imagery.",
    duration: "Day 1-2"
  },
  {
    title: "Field Survey & Investigation",
    description: "Licensed surveyor conducts on-site inspection while our team gathers legal documents and utility information.",
    duration: "Day 3-5"
  },
  {
    title: "Report Compilation & Delivery",
    description: "All findings are compiled into a comprehensive report with risk analysis and actionable recommendations.",
    duration: "Day 6-7"
  }
];

const addOns = [
  {
    title: "360° VR Property Tour",
    description: "Professional drone footage and 360° interior capture",
    price: "¥45,000"
  },
  {
    title: "Architect Consultation",
    description: "Building feasibility assessment with licensed architect",
    price: "¥60,000"
  },
  {
    title: "Legal Document Translation",
    description: "Certified translation of all legal documents",
    price: "¥25,000"
  },
  {
    title: "Rush Delivery (3-5 days)",
    description: "Expedited processing with extended team hours",
    price: "¥30,000"
  }
];
---

<BaseLayout {...pageData}>
  <!-- Hero Section -->
  <HeroStatic
    imgSrc="/assets/img/full-report-hero.jpg"
    headline="Full Risk Report"
    sub="Comprehensive land due diligence for confident property investment"
  />

  <!-- Pricing & Overview -->
  <section class="max-w-6xl mx-auto px-6 py-16">
    <div class="grid gap-12 lg:grid-cols-2 items-center">
      <div>
        <h2 class="text-3xl font-bold mb-6 text-gray-900">Complete Due Diligence Package</h2>
        <p class="text-lg text-gray-600 mb-8">
          Our most comprehensive service combines on-site inspection, legal analysis, and environmental assessment. 
          Perfect for serious investors who need detailed risk evaluation before making significant property decisions.
        </p>
        <div class="bg-blue-50 rounded-lg p-6 mb-8">
          <div class="flex items-center justify-between mb-4">
            <span class="text-2xl font-bold text-blue-900">¥120,000</span>
            <span class="text-sm text-blue-600 bg-blue-100 px-3 py-1 rounded-full">7 business days</span>
          </div>
          <p class="text-blue-800 text-sm">Includes on-site survey, legal review, and comprehensive risk assessment</p>
        </div>
        <a href="/contact" class="btn bg-blue-600 text-white hover:bg-blue-700 btn-lg">
          Get Started Today
        </a>
      </div>
      <div class="bg-white rounded-xl shadow-lg p-6">
        <h3 class="text-xl font-semibold mb-4 text-gray-900">What's Included</h3>
        <Checklist items={checklistItems} />
      </div>
    </div>
  </section>

  <!-- Sample Report Preview -->
  <section class="bg-gray-50 py-16">
    <div class="max-w-6xl mx-auto px-6">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold mb-4 text-gray-900">Sample Report Preview</h2>
        <p class="text-lg text-gray-600">
          See the quality and depth of analysis you'll receive with our Full Risk Report
        </p>
      </div>
      
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        <PdfPreview
          title="Executive Summary"
          description="Overview of key findings and risk assessment"
          pdfUrl="/assets/pdf/sample-executive-summary.pdf"
          thumbnailUrl="/assets/img/pdf-preview-executive.jpg"
        />
        <PdfPreview
          title="Site Survey Report"
          description="Detailed on-site inspection findings"
          pdfUrl="/assets/pdf/sample-site-survey.pdf"
          thumbnailUrl="/assets/img/pdf-preview-survey.jpg"
        />
        <PdfPreview
          title="Legal Analysis"
          description="Comprehensive legal and zoning review"
          pdfUrl="/assets/pdf/sample-legal-analysis.pdf"
          thumbnailUrl="/assets/img/pdf-preview-legal.jpg"
        />
      </div>
    </div>
  </section>

  <!-- Process Timeline -->
  <section class="max-w-6xl mx-auto px-6 py-16">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold mb-4 text-gray-900">Our 7-Day Process</h2>
      <p class="text-lg text-gray-600">
        From initial assessment to final report delivery, here's how we work
      </p>
    </div>
    <StepTimeline steps={timelineSteps} />
  </section>

  <!-- Optional Add-ons -->
  <section class="bg-gray-50 py-16">
    <div class="max-w-6xl mx-auto px-6">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold mb-4 text-gray-900">Optional Add-ons</h2>
        <p class="text-lg text-gray-600">
          Enhance your report with additional services tailored to your needs
        </p>
      </div>
      
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-4">
        {addOns.map((addon) => (
          <div class="bg-white rounded-lg p-6 shadow-md">
            <h3 class="text-lg font-semibold mb-3 text-gray-900">{addon.title}</h3>
            <p class="text-gray-600 text-sm mb-4">{addon.description}</p>
            <div class="flex items-center justify-between">
              <span class="text-xl font-bold text-blue-600">{addon.price}</span>
              <button class="text-blue-600 hover:text-blue-800 text-sm font-medium">
                Add to Order
              </button>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="max-w-4xl mx-auto px-6 py-16">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold mb-4 text-gray-900">Frequently Asked Questions</h2>
      <p class="text-lg text-gray-600">
        Common questions about our Full Risk Report service
      </p>
    </div>
    
    <div class="space-y-4">
      {faqData.map((faq, index) => (
        <Accordion
          question={faq.question}
          answer={faq.answer}
          isOpen={index === 0}
        />
      ))}
    </div>
  </section>

  <!-- Final CTA -->
  <section class="bg-blue-600 py-16 text-center text-white">
    <div class="max-w-4xl mx-auto px-6">
      <h2 class="text-3xl font-bold mb-4">Ready to Get Started?</h2>
      <p class="text-xl mb-8 opacity-90">
        Invest with confidence. Get your comprehensive land risk assessment today.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="btn btn-lg bg-white text-blue-600 hover:bg-gray-100">
          Order Full Risk Report
        </a>
        <a href="/contact" class="btn btn-lg border-2 border-white text-white hover:bg-white hover:text-blue-600">
          Schedule Consultation
        </a>
      </div>
      <p class="text-sm mt-6 opacity-80">
        ✓ 30-day money-back guarantee ✓ Licensed surveyors ✓ Bilingual support
      </p>
    </div>
  </section>
</BaseLayout>

<!-- Structured Data for Full Risk Report -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Product",
  "name": "Full Risk Report",
  "description": "Comprehensive land due diligence for confident property investment in Japan. Includes on-site survey, legal review, and environmental assessment.",
  "brand": {
    "@type": "Brand",
    "name": "Land Vista Global"
  },
  "offers": {
    "@type": "Offer",
    "price": "120000",
    "priceCurrency": "JPY",
    "availability": "https://schema.org/InStock",
    "url": "https://yourusername.github.io/land-vista/services/full-report",
    "priceValidUntil": "2025-12-31"
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.8",
    "reviewCount": "47"
  },
  "provider": {
    "@type": "Organization",
    "name": "Land Vista Global",
    "url": "https://yourusername.github.io/land-vista"
  }
}
</script>

<style>
  .btn {
    @apply inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 transition-colors;
  }
  
  .btn-lg {
    @apply px-8 py-4 text-lg;
  }
</style>