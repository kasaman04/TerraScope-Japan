---
import BaseLayout from '../../layouts/BaseLayout.astro';
import HeroStatic from '../../components/HeroStatic.astro';
import VideoCarousel from '../../components/VideoCarousel.astro';
import GearList from '../../components/GearList.astro';
import Checklist from '../../components/Checklist.astro';
import StepTimeline from '../../components/StepTimeline.astro';
import Accordion from '../../components/Accordion.astro';
import faqData from '../../assets/data/faq_vr.js';

const pageData = {
  title: '360° VR Capture - Immersive Property Tours',
  description: 'Professional 360° VR property tours with 4K drone footage. Let buyers explore Japanese land remotely with immersive virtual reality experience.',
  lang: 'en'
};

const demoVideos = [
  {
    id: 'rural-property',
    title: 'Rural Property VR Tour',
    description: 'Explore a traditional Japanese farmhouse with surrounding land in Nagano Prefecture',
    thumbnail: 'https://images.unsplash.com/photo-1545558014-8692077e9b5c?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
    videoUrl: '/assets/video/placeholder.mp4',
    duration: '3:45'
  },
  {
    id: 'coastal-land',
    title: 'Coastal Land Overview',
    description: 'Immersive tour of coastal development land in Kanagawa with ocean views',
    thumbnail: 'https://images.unsplash.com/photo-1506905925346-21bda4d32df4?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
    videoUrl: '/assets/video/placeholder.mp4',
    duration: '2:30'
  },
  {
    id: 'mountain-retreat',
    title: 'Mountain Retreat',
    description: '360° capture of mountain property with traditional architecture in Gifu',
    thumbnail: 'https://images.unsplash.com/photo-1469474968028-56623f02e42e?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
    videoUrl: '/assets/video/placeholder.mp4',
    duration: '4:15'
  }
];

const equipment = [
  {
    name: 'DJI Mini 4 Pro',
    type: 'Drone',
    description: 'Professional 4K drone with obstacle avoidance and 45-minute flight time. Captures stunning aerial footage and wide-angle property overviews.',
    image: 'https://images.unsplash.com/photo-1473968512647-3e447244af8f?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
    specs: [
      '4K/60fps video recording',
      '45-minute flight time',
      'Omnidirectional obstacle sensing',
      '20km max transmission range'
    ]
  },
  {
    name: 'Insta360 X4',
    type: '360° Camera',
    description: 'Cutting-edge 360° camera for immersive ground-level captures. Creates seamless VR experiences with 8K resolution and advanced stabilization.',
    image: 'https://images.unsplash.com/photo-1606983340126-99ab4feaa64a?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
    specs: [
      '8K 360° video recording',
      'FlowState stabilization',
      'Invisible selfie stick effect',
      'AI-powered editing features'
    ]
  },
  {
    name: 'Zoom H1 N',
    type: 'Audio Recorder',
    description: 'High-quality audio recording for narration and ambient sound. Ensures crystal-clear commentary and immersive audio experience.',
    image: 'https://images.unsplash.com/photo-1598488035139-bdbb2231ce04?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
    specs: [
      'Professional audio quality',
      'Built-in windscreen',
      'Long battery life',
      'Compact, portable design'
    ]
  }
];

const packageItems = [
  { text: "4K drone aerial footage", completed: true },
  { text: "360° interior and exterior capture", completed: true },
  { text: "Interactive web viewer (no software needed)", completed: true },
  { text: "Downloadable MP4 files", completed: true },
  { text: "Professional editing and color correction", completed: true },
  { text: "Optional English/Japanese narration", completed: true },
  { text: "1-year secure hosting included", completed: true },
  { text: "Mobile and desktop compatible", completed: true },
  { text: "VR headset compatible files", completed: true },
  { text: "5 business day delivery", completed: true }
];

const workflowSteps = [
  {
    title: "Planning & Scheduling",
    description: "We coordinate with you to plan the optimal filming schedule, considering weather, lighting, and property access.",
    duration: "Day 1"
  },
  {
    title: "On-Site Filming",
    description: "Professional crew captures 4K drone footage and 360° interior/exterior shots using our advanced equipment.",
    duration: "Day 2-3"
  },
  {
    title: "Post-Production",
    description: "Expert editing, color correction, and VR optimization to create immersive, professional-quality tours.",
    duration: "Day 4-5"
  }
];
---

<BaseLayout {...pageData}>
  <!-- Hero Section -->
  <HeroStatic
    imgSrc="/assets/img/vr-capture-hero.jpg"
    headline="360° VR Capture"
    sub="Immersive property tours that bring Japanese land to life"
  />

  <!-- Pricing & Overview -->
  <section class="max-w-6xl mx-auto px-6 py-16">
    <div class="grid gap-12 lg:grid-cols-2 items-start">
      <div>
        <h2 class="text-3xl font-bold mb-6 text-gray-900">Immersive Virtual Reality Tours</h2>
        <p class="text-lg text-gray-600 mb-8">
          Give your buyers the power to explore properties remotely with our cutting-edge 360° VR technology. 
          Professional 4K drone footage combined with ground-level 360° capture creates truly immersive experiences.
        </p>
        <div class="bg-purple-50 rounded-lg p-6 mb-8">
          <div class="flex items-center justify-between mb-4">
            <span class="text-2xl font-bold text-purple-900">¥30,000</span>
            <span class="text-sm text-purple-600 bg-purple-100 px-3 py-1 rounded-full">5 business days</span>
          </div>
          <p class="text-purple-800 text-sm">Professional VR capture with 4K drone footage and 360° tours</p>
        </div>
        <a href="/contact" class="btn bg-purple-600 text-white hover:bg-purple-700 btn-lg">
          Book VR Capture
        </a>
      </div>
      
      <div class="bg-white rounded-xl shadow-lg p-6">
        <h3 class="text-xl font-semibold mb-4 text-gray-900">What's Included</h3>
        <Checklist items={packageItems} />
      </div>
    </div>
  </section>

  <!-- Demo Video Carousel -->
  <section class="bg-gray-50 py-16">
    <div class="max-w-6xl mx-auto px-6">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold mb-4 text-gray-900">See Our VR Captures in Action</h2>
        <p class="text-lg text-gray-600">
          Experience the immersive quality of our 360° VR property tours
        </p>
      </div>
      
      <VideoCarousel videos={demoVideos} />
    </div>
  </section>

  <!-- Equipment Showcase -->
  <section class="max-w-6xl mx-auto px-6 py-16">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold mb-4 text-gray-900">Professional Equipment</h2>
      <p class="text-lg text-gray-600">
        We use cutting-edge technology to ensure the highest quality VR captures
      </p>
    </div>
    
    <GearList equipment={equipment} />
  </section>

  <!-- Process Timeline -->
  <section class="bg-gray-50 py-16">
    <div class="max-w-6xl mx-auto px-6">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold mb-4 text-gray-900">Our 5-Day Process</h2>
        <p class="text-lg text-gray-600">
          From planning to delivery, here's how we create your VR experience
        </p>
      </div>
      <StepTimeline steps={workflowSteps} />
    </div>
  </section>

  <!-- Features Grid -->
  <section class="max-w-6xl mx-auto px-6 py-16">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold mb-4 text-gray-900">Why Choose VR Capture?</h2>
      <p class="text-lg text-gray-600">
        The advantages of immersive virtual reality property tours
      </p>
    </div>
    
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      <div class="text-center p-6 bg-white rounded-xl shadow-md">
        <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
          </svg>
        </div>
        <h3 class="text-xl font-semibold mb-3 text-gray-900">Immersive Experience</h3>
        <p class="text-gray-600">360° viewing allows buyers to explore properties as if they're physically there</p>
      </div>
      
      <div class="text-center p-6 bg-white rounded-xl shadow-md">
        <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
          </svg>
        </div>
        <h3 class="text-xl font-semibold mb-3 text-gray-900">No Software Required</h3>
        <p class="text-gray-600">Works on any device - desktop, mobile, or tablet - directly in the web browser</p>
      </div>
      
      <div class="text-center p-6 bg-white rounded-xl shadow-md">
        <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
        </div>
        <h3 class="text-xl font-semibold mb-3 text-gray-900">Faster Decisions</h3>
        <p class="text-gray-600">Buyers can make informed decisions without expensive site visits</p>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="max-w-4xl mx-auto px-6 py-16">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold mb-4 text-gray-900">Frequently Asked Questions</h2>
      <p class="text-lg text-gray-600">
        Common questions about our VR capture service
      </p>
    </div>
    
    <div class="space-y-4">
      {faqData.map((faq, index) => (
        <Accordion
          question={faq.question}
          answer={faq.answer}
          isOpen={index === 0}
        />
      ))}
    </div>
  </section>

  <!-- Final CTA -->
  <section class="bg-purple-600 py-16 text-center text-white">
    <div class="max-w-4xl mx-auto px-6">
      <h2 class="text-3xl font-bold mb-4">Ready to Showcase Your Property?</h2>
      <p class="text-xl mb-8 opacity-90">
        Create immersive VR experiences that sell properties faster
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="btn btn-lg bg-white text-purple-600 hover:bg-gray-100">
          Book VR Capture
        </a>
        <a href="/contact" class="btn btn-lg border-2 border-white text-white hover:bg-white hover:text-purple-600">
          View Demo
        </a>
      </div>
      <p class="text-sm mt-6 opacity-80">
        ✓ 5-day turnaround ✓ Professional equipment ✓ 1-year hosting included
      </p>
    </div>
  </section>
</BaseLayout>

<style>
  .btn {
    @apply inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 transition-colors;
  }
  
  .btn-lg {
    @apply px-8 py-4 text-lg;
  }
</style>