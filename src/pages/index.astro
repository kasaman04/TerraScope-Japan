---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroVideo from '../components/HeroVideo.astro';
import Steps from '../components/Steps.astro';
import ServiceCards from '../components/ServiceCards.astro';
import Testimonials from '../components/Testimonials.astro';
import BlogTeasers from '../components/BlogTeasers.astro';

const title = "See the land before you stand – LAND VISTA Global";
const description = "日本の土地購入を検討する海外投資家向けに、360°映像と法規・リスクをワンストップで提供するサイト";
const lang = "en";
const hero_video = "/assets/video/sample-hero-360.mp4";
---

<BaseLayout {title} {description} {lang}>
  <!-- ===== Hero Section ===== -->
  <HeroVideo
    src={hero_video}
    headline="See the land before you stand"
    subheadline="360° views • Legal clarity • Risk insight"
  />

  <!-- ===== 3-Step Flow ===== -->
  <Steps
    items={[
      { icon:"MapPin",  title:"Explore",  desc:"Browse interactive maps with 360° views and hazard layers." },
      { icon:"ClipboardCheck", title:"Verify", desc:"Get a tailored survey report covering law, tax and utilities." },
      { icon:"Handshake", title:"Close", desc:"Connect with vetted local experts to complete your purchase." },
    ]}
  />

  <!-- ===== Featured Services ===== -->
  <ServiceCards
    dataSrc="/assets/data/services.yaml"
    show={3}
  />

  <!-- ===== Social Proof ===== -->
  <Testimonials dataSrc="/assets/data/testimonials.yaml"/>

  <!-- ===== Latest Articles ===== -->
  <BlogTeasers count={3} cta="Read more insights"/>

  <!-- ===== Final CTA ===== -->
  <section class="bg-primary-600 py-12 text-center text-white">
    <h2 class="text-2xl font-semibold mb-4">
      Ready to secure your piece of Japan?
    </h2>
    <a href="/contact" class="btn btn-lg btn-white shadow-lg" aria-label="Get your free consultation">
      Get your free consultation
    </a>
  </section>
</BaseLayout>

<!-- Structured Data for Organization -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Land Vista Global",
  "url": "https://yourusername.github.io/land-vista",
  "description": "Professional land due diligence services for foreign investors in Japan",
  "serviceArea": {
    "@type": "Country",
    "name": "Japan"
  },
  "offers": [
    {
      "@type": "Service",
      "name": "Light Survey",
      "description": "Basic land survey and zoning check",
      "provider": {
        "@type": "Organization",
        "name": "Land Vista Global"
      }
    },
    {
      "@type": "Service", 
      "name": "Full Risk Report",
      "description": "Comprehensive land due diligence report",
      "provider": {
        "@type": "Organization",
        "name": "Land Vista Global"
      }
    },
    {
      "@type": "Service",
      "name": "360° VR Capture",
      "description": "Professional drone and 360° property footage",
      "provider": {
        "@type": "Organization",
        "name": "Land Vista Global"
      }
    }
  ]
}
</script>