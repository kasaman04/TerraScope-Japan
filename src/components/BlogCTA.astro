---
export interface Props {
  service?: string;
}

const { service } = Astro.props;

// Service mapping for CTA
const serviceMap: Record<string, {
  title: string;
  description: string;
  price: string;
  link: string;
  highlights: string[];
}> = {
  light: {
    title: "Light Survey",
    description: "Get essential boundary and zoning insights for your property",
    price: "¥50,000",
    link: "/services/light-survey",
    highlights: [
      "Boundary confirmation with photos",
      "English zoning summary",
      "3-day turnaround"
    ]
  },
  full: {
    title: "Full Risk Report", 
    description: "Comprehensive risk assessment including legal compliance check",
    price: "¥120,000",
    link: "/services/full-report",
    highlights: [
      "Complete hazard analysis",
      "Legal & tax checklist",
      "15-page detailed report"
    ]
  },
  vr: {
    title: "360° VR Capture",
    description: "See the property remotely with immersive VR footage",
    price: "¥30,000", 
    link: "/services/vr-capture",
    highlights: [
      "4K drone footage",
      "360° interactive viewer",
      "5-day delivery"
    ]
  }
};

const selectedService = service ? serviceMap[service] : null;
---

{selectedService && (
  <div class="my-12 p-8 bg-gradient-to-r from-primary-50 to-blue-50 border border-primary-200 rounded-xl">
    <div class="max-w-4xl mx-auto">
      <div class="flex flex-col lg:flex-row items-center gap-8">
        <!-- Content -->
        <div class="flex-1">
          <div class="flex items-center gap-3 mb-4">
            <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <h3 class="text-2xl font-bold text-gray-900">Need Professional Help?</h3>
          </div>
          
          <h4 class="text-xl font-semibold text-primary-700 mb-2">{selectedService.title}</h4>
          <p class="text-gray-700 mb-4">{selectedService.description}</p>
          
          <ul class="space-y-2 mb-6">
            {selectedService.highlights.map((highlight) => (
              <li class="flex items-center text-sm text-gray-600">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                {highlight}
              </li>
            ))}
          </ul>
        </div>
        
        <!-- CTA -->
        <div class="text-center lg:text-right">
          <div class="text-3xl font-bold text-primary-600 mb-4">{selectedService.price}</div>
          <a 
            href={selectedService.link}
            class="btn btn-lg bg-primary-600 text-white hover:bg-primary-700 shadow-lg"
          >
            Get Started
          </a>
          <p class="text-xs text-gray-500 mt-2">Professional guidance included</p>
        </div>
      </div>
    </div>
  </div>
)}

<style>
  .btn {
    @apply inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 transition-colors;
  }
</style>