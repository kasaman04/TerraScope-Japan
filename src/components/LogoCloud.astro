---
export interface Props {
  logos: string[];
}

const { logos } = Astro.props;
---

<section class="py-12 bg-gray-50">
  <div class="max-w-6xl mx-auto px-6 text-center">
    <h3 class="text-lg font-medium text-gray-500 mb-8">Featured in</h3>
    <div class="flex flex-wrap justify-center items-center gap-8 md:gap-12">
      {logos.map((logo, index) => (
        <div class="flex-shrink-0">
          <img 
            src={logo} 
            alt={`Media logo ${index + 1}`}
            class="h-8 md:h-10 opacity-60 hover:opacity-100 transition-opacity grayscale hover:grayscale-0"
            loading="lazy"
            onerror="this.src='https://via.placeholder.com/120x40/cccccc/666666?text=Logo'"
          />
        </div>
      ))}
    </div>
  </div>
</section>