---
import { Image } from 'astro:assets';

export interface Props {
  src: string;
  headline: string;
  subheadline: string;
}

const { src, headline, subheadline } = Astro.props;
---

<section class="relative h-screen w-full overflow-hidden aspect-[16/9]">
  <div class="absolute inset-0 bg-black/40 z-10"></div>
  <video
    class="absolute inset-0 w-full h-full object-cover"
    src={src}
    autoplay
    muted
    loop
    playsinline
    poster="/assets/images/hero-poster.jpg"
    loading="lazy"
  >
  </video>
  <div class="relative z-20 h-full flex items-center justify-center text-center">
    <div class="max-w-4xl mx-auto px-4">
      <h1 class="text-4xl md:text-6xl font-bold text-white mb-4">
        {headline}
      </h1>
      <p class="text-xl md:text-2xl text-white/90 mb-8">
        {subheadline}
      </p>
      <a href="#explore" class="btn btn-lg border-2 border-white text-white hover:bg-white hover:text-black transition-all" aria-label="Start exploring properties">
        Start exploring
      </a>
    </div>
  </div>
</section>