---
export interface Props {
  items: Array<{
    icon: string;
    title: string;
    desc: string;
  }>;
}

const { items } = Astro.props;

const iconMap = {
  MapPin: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
