  </svg>`
};
---

<section id="explore" class="py-16 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">How it works</h2>
      <p class="text-xl text-gray-600">Three simple steps to secure your Japanese land investment</p>
    </div>
    <div class="grid md:grid-cols-3 gap-8">
      {items.map((item, index) => (
        <div class="relative">
          <div class="flex flex-col items-center text-center">
            <div class="bg-primary-100 text-primary-600 rounded-full p-4 mb-4">
              <Fragment set:html={iconMap[item.icon]} />
            </div>
            <h3 class="text-xl font-semibold mb-2">{item.title}</h3>
            <p class="text-gray-600">{item.desc}</p>
          </div>
          {index < items.length - 1 && (
            <div class="hidden md:block absolute top-12 left-full w-full">
              <svg class="w-full h-1" viewBox="0 0 100 1" preserveAspectRatio="none">
                <line x1="0" y1="0.5" x2="100" y2="0.5" stroke="#e5e7eb" stroke-width="2" stroke-dasharray="5 5" />
              </svg>
            </div>
          )}
        </div>
      ))}
    </div>
  </div>
</section>